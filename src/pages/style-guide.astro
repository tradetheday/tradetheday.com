---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Design Style Guide";
const pageDescription = "TradeTheDay design system reference - colors, typography, components, and patterns.";
---

<BaseLayout title={pageTitle} description={pageDescription} noindex={true}>
  <div class="style-guide">
    <section class="sg-hero">
      <div class="container">
        <h1>TradeTheDay Design System</h1>
        <p class="body-large">A comprehensive guide to colors, typography, spacing, and components used across the site.</p>
      </div>
    </section>

    <!-- Colors Section -->
    <section class="sg-section">
      <div class="container">
        <h2 class="sg-section-title">Color Palette</h2>

        <h3 class="sg-subsection-title">Brand Colors</h3>
        <div class="sg-color-grid">
          <div class="sg-color-card">
            <div class="sg-color-swatch" style="background: var(--brand-orange);"></div>
            <div class="sg-color-info">
              <strong>Brand Orange</strong>
              <code>--brand-orange</code>
              <span>#FF4800</span>
            </div>
          </div>
          <div class="sg-color-card">
            <div class="sg-color-swatch" style="background: var(--brand-orange-dark);"></div>
            <div class="sg-color-info">
              <strong>Brand Orange Dark</strong>
              <code>--brand-orange-dark</code>
              <span>#e63e00</span>
            </div>
          </div>
          <div class="sg-color-card">
            <div class="sg-color-swatch" style="background: var(--brand-orange-light);"></div>
            <div class="sg-color-info">
              <strong>Brand Orange Light</strong>
              <code>--brand-orange-light</code>
              <span>#ff5c1a</span>
            </div>
          </div>
        </div>

        <h3 class="sg-subsection-title">Neutral Colors</h3>
        <div class="sg-color-grid">
          <div class="sg-color-card">
            <div class="sg-color-swatch" style="background: var(--charcoal);"></div>
            <div class="sg-color-info">
              <strong>Charcoal</strong>
              <code>--charcoal</code>
              <span>#1E2427</span>
            </div>
          </div>
          <div class="sg-color-card">
            <div class="sg-color-swatch" style="background: var(--charcoal-light);"></div>
            <div class="sg-color-info">
              <strong>Charcoal Light</strong>
              <code>--charcoal-light</code>
              <span>#2a3136</span>
            </div>
          </div>
          <div class="sg-color-card">
            <div class="sg-color-swatch" style="background: var(--white);"></div>
            <div class="sg-color-info">
              <strong>White</strong>
              <code>--white</code>
              <span>#fafbfc</span>
            </div>
          </div>
        </div>

        <h3 class="sg-subsection-title">Gray Scale</h3>
        <div class="sg-color-grid sg-color-grid-small">
          <div class="sg-color-card-mini">
            <div class="sg-color-swatch-mini" style="background: var(--gray-50);"></div>
            <code>--gray-50</code>
          </div>
          <div class="sg-color-card-mini">
            <div class="sg-color-swatch-mini" style="background: var(--gray-100);"></div>
            <code>--gray-100</code>
          </div>
          <div class="sg-color-card-mini">
            <div class="sg-color-swatch-mini" style="background: var(--gray-200);"></div>
            <code>--gray-200</code>
          </div>
          <div class="sg-color-card-mini">
            <div class="sg-color-swatch-mini" style="background: var(--gray-300);"></div>
            <code>--gray-300</code>
          </div>
          <div class="sg-color-card-mini">
            <div class="sg-color-swatch-mini" style="background: var(--gray-400);"></div>
            <code>--gray-400</code>
          </div>
          <div class="sg-color-card-mini">
            <div class="sg-color-swatch-mini" style="background: var(--gray-500);"></div>
            <code>--gray-500</code>
          </div>
          <div class="sg-color-card-mini">
            <div class="sg-color-swatch-mini" style="background: var(--gray-600);"></div>
            <code>--gray-600</code>
          </div>
          <div class="sg-color-card-mini">
            <div class="sg-color-swatch-mini" style="background: var(--gray-700);"></div>
            <code>--gray-700</code>
          </div>
          <div class="sg-color-card-mini">
            <div class="sg-color-swatch-mini" style="background: var(--gray-800);"></div>
            <code>--gray-800</code>
          </div>
          <div class="sg-color-card-mini">
            <div class="sg-color-swatch-mini" style="background: var(--gray-900);"></div>
            <code>--gray-900</code>
          </div>
        </div>

        <h3 class="sg-subsection-title">Status Colors</h3>
        <div class="sg-color-grid">
          <div class="sg-color-card">
            <div class="sg-color-swatch" style="background: var(--success);"></div>
            <div class="sg-color-info">
              <strong>Success</strong>
              <code>--success</code>
              <span>#10B981</span>
            </div>
          </div>
          <div class="sg-color-card">
            <div class="sg-color-swatch" style="background: var(--error);"></div>
            <div class="sg-color-info">
              <strong>Error</strong>
              <code>--error</code>
              <span>#EF4444</span>
            </div>
          </div>
          <div class="sg-color-card">
            <div class="sg-color-swatch" style="background: var(--warning);"></div>
            <div class="sg-color-info">
              <strong>Warning</strong>
              <code>--warning</code>
              <span>#ffc107</span>
            </div>
          </div>
          <div class="sg-color-card">
            <div class="sg-color-swatch" style="background: var(--info);"></div>
            <div class="sg-color-info">
              <strong>Info</strong>
              <code>--info</code>
              <span>#0693e3</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Typography Section -->
    <section class="sg-section sg-section-alt">
      <div class="container">
        <h2 class="sg-section-title">Typography</h2>

        <h3 class="sg-subsection-title">Headings</h3>
        <div class="sg-type-samples">
          <div class="sg-type-sample">
            <h1 class="heading-1">Heading 1</h1>
            <code>.heading-1 | 48px / 800 weight</code>
          </div>
          <div class="sg-type-sample">
            <h2 class="heading-2">Heading 2</h2>
            <code>.heading-2 | 40px / 700 weight</code>
          </div>
          <div class="sg-type-sample">
            <h3 class="heading-3">Heading 3</h3>
            <code>.heading-3 | 32px / 700 weight</code>
          </div>
          <div class="sg-type-sample">
            <h4 class="heading-4">Heading 4</h4>
            <code>.heading-4 | 24px / 600 weight</code>
          </div>
        </div>

        <h3 class="sg-subsection-title">Body Text</h3>
        <div class="sg-type-samples">
          <div class="sg-type-sample">
            <p class="body-large">Body Large - For lead paragraphs and important content that needs emphasis.</p>
            <code>.body-large | 18px</code>
          </div>
          <div class="sg-type-sample">
            <p>Body Default - Standard paragraph text used throughout the site for regular content.</p>
            <code>default | 16px</code>
          </div>
          <div class="sg-type-sample">
            <p class="body-sm">Body Small - For captions, metadata, and secondary information.</p>
            <code>.body-sm | 14px</code>
          </div>
          <div class="sg-type-sample">
            <p class="body-xs">Body Extra Small - For fine print and legal text.</p>
            <code>.body-xs | 12px</code>
          </div>
        </div>

        <h3 class="sg-subsection-title">Font Size Scale</h3>
        <div class="sg-token-table">
          <div class="sg-token-row">
            <code>--font-size-xs</code>
            <span>12px</span>
          </div>
          <div class="sg-token-row">
            <code>--font-size-sm</code>
            <span>14px</span>
          </div>
          <div class="sg-token-row">
            <code>--font-size-base</code>
            <span>16px</span>
          </div>
          <div class="sg-token-row">
            <code>--font-size-lg</code>
            <span>18px</span>
          </div>
          <div class="sg-token-row">
            <code>--font-size-xl</code>
            <span>20px</span>
          </div>
          <div class="sg-token-row">
            <code>--font-size-2xl</code>
            <span>24px</span>
          </div>
          <div class="sg-token-row">
            <code>--font-size-3xl</code>
            <span>32px</span>
          </div>
          <div class="sg-token-row">
            <code>--font-size-4xl</code>
            <span>40px</span>
          </div>
          <div class="sg-token-row">
            <code>--font-size-5xl</code>
            <span>48px</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Spacing Section -->
    <section class="sg-section">
      <div class="container">
        <h2 class="sg-section-title">Spacing System</h2>
        <p class="body-large">Based on an 8px grid system for consistent rhythm.</p>

        <div class="sg-spacing-grid">
          <div class="sg-spacing-item">
            <div class="sg-spacing-box" style="width: 8px; height: 8px;"></div>
            <code>--space-xs</code>
            <span>8px</span>
          </div>
          <div class="sg-spacing-item">
            <div class="sg-spacing-box" style="width: 16px; height: 16px;"></div>
            <code>--space-sm</code>
            <span>16px</span>
          </div>
          <div class="sg-spacing-item">
            <div class="sg-spacing-box" style="width: 24px; height: 24px;"></div>
            <code>--space-md</code>
            <span>24px</span>
          </div>
          <div class="sg-spacing-item">
            <div class="sg-spacing-box" style="width: 32px; height: 32px;"></div>
            <code>--space-lg</code>
            <span>32px</span>
          </div>
          <div class="sg-spacing-item">
            <div class="sg-spacing-box" style="width: 48px; height: 48px;"></div>
            <code>--space-xl</code>
            <span>48px</span>
          </div>
          <div class="sg-spacing-item">
            <div class="sg-spacing-box" style="width: 64px; height: 64px;"></div>
            <code>--space-2xl</code>
            <span>64px</span>
          </div>
          <div class="sg-spacing-item">
            <div class="sg-spacing-box" style="width: 80px; height: 80px;"></div>
            <code>--space-3xl</code>
            <span>80px</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Buttons Section -->
    <section class="sg-section sg-section-alt">
      <div class="container">
        <h2 class="sg-section-title">Buttons</h2>

        <h3 class="sg-subsection-title">Button Variants</h3>
        <div class="sg-button-row">
          <button class="btn btn-primary">Primary Button</button>
          <button class="btn btn-secondary">Secondary Button</button>
          <button class="btn btn-outline">Outline Button</button>
          <button class="btn btn-ghost">Ghost Button</button>
        </div>
        <div class="sg-code-block">
          <code>&lt;button class="btn btn-primary"&gt;Primary&lt;/button&gt;</code>
          <code>&lt;button class="btn btn-secondary"&gt;Secondary&lt;/button&gt;</code>
          <code>&lt;button class="btn btn-outline"&gt;Outline&lt;/button&gt;</code>
          <code>&lt;button class="btn btn-ghost"&gt;Ghost&lt;/button&gt;</code>
        </div>

        <h3 class="sg-subsection-title">Button Sizes</h3>
        <div class="sg-button-row">
          <button class="btn btn-primary btn-sm">Small</button>
          <button class="btn btn-primary btn-md">Medium</button>
          <button class="btn btn-primary btn-lg">Large</button>
          <button class="btn btn-primary btn-xl">Extra Large</button>
        </div>
        <div class="sg-code-block">
          <code>.btn-sm | min-height: 36px</code>
          <code>.btn-md | min-height: 44px (default)</code>
          <code>.btn-lg | min-height: 48px</code>
          <code>.btn-xl | larger padding</code>
        </div>

        <h3 class="sg-subsection-title">Disabled State</h3>
        <div class="sg-button-row">
          <button class="btn btn-primary" disabled>Disabled Primary</button>
          <button class="btn btn-secondary" disabled>Disabled Secondary</button>
        </div>
      </div>
    </section>

    <!-- Cards Section -->
    <section class="sg-section">
      <div class="container">
        <h2 class="sg-section-title">Cards</h2>

        <h3 class="sg-subsection-title">Light Theme Cards</h3>
        <div class="sg-card-grid">
          <div class="card">
            <h4 class="heading-4">Basic Card</h4>
            <p>Standard card component with padding, border, and rounded corners.</p>
            <code>.card</code>
          </div>
          <div class="card card-hover">
            <h4 class="heading-4">Hover Card</h4>
            <p>Card with hover effect - lifts and shows shadow on hover.</p>
            <code>.card .card-hover</code>
          </div>
          <div class="card card-highlight">
            <h4 class="heading-4">Highlight Card</h4>
            <p>Card with brand orange border for emphasis.</p>
            <code>.card .card-highlight</code>
          </div>
        </div>

        <h3 class="sg-subsection-title">Dark Theme Cards (Tools Pages)</h3>
        <p class="body-sm">Used on dark background pages like calculators and tools. Import <code>tools.css</code>.</p>
        <div class="sg-dark-preview">
          <div class="tool-card">
            <h4 style="color: var(--white); margin-bottom: 8px;">Tool Card</h4>
            <p style="color: var(--gray-400);">Dark theme card for calculator inputs and tool sections.</p>
            <code style="color: var(--brand-orange);">.tool-card</code>
          </div>
          <div class="tool-result-card">
            <h4 style="color: var(--white); margin-bottom: 8px;">Result Card</h4>
            <p style="color: var(--gray-400);">For displaying calculation results.</p>
            <code style="color: var(--brand-orange);">.tool-result-card</code>
          </div>
          <div class="tool-result-card featured">
            <h4 style="color: var(--white); margin-bottom: 8px;">Featured Result</h4>
            <p style="color: var(--gray-400);">Highlighted result with orange border.</p>
            <code style="color: var(--brand-orange);">.tool-result-card.featured</code>
          </div>
        </div>
      </div>
    </section>

    <!-- Border Radius Section -->
    <section class="sg-section sg-section-alt">
      <div class="container">
        <h2 class="sg-section-title">Border Radius</h2>

        <div class="sg-radius-grid">
          <div class="sg-radius-item">
            <div class="sg-radius-box" style="border-radius: var(--radius-sm);"></div>
            <code>--radius-sm</code>
            <span>8px</span>
          </div>
          <div class="sg-radius-item">
            <div class="sg-radius-box" style="border-radius: var(--radius-md);"></div>
            <code>--radius-md</code>
            <span>12px</span>
          </div>
          <div class="sg-radius-item">
            <div class="sg-radius-box" style="border-radius: var(--radius-lg);"></div>
            <code>--radius-lg</code>
            <span>16px</span>
          </div>
          <div class="sg-radius-item">
            <div class="sg-radius-box" style="border-radius: var(--radius-xl);"></div>
            <code>--radius-xl</code>
            <span>24px</span>
          </div>
          <div class="sg-radius-item">
            <div class="sg-radius-box" style="border-radius: var(--radius-full);"></div>
            <code>--radius-full</code>
            <span>50px</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Page Themes Section -->
    <section class="sg-section">
      <div class="container">
        <h2 class="sg-section-title">Page Themes</h2>

        <div class="sg-theme-grid">
          <div class="sg-theme-card">
            <div class="sg-theme-preview sg-theme-light">
              <div class="sg-mini-header"></div>
              <div class="sg-mini-content"></div>
            </div>
            <h4>Light Theme (Default)</h4>
            <p>Used for: Homepage, Broker reviews, Guides, Bonus codes</p>
            <code>Background: var(--white)</code>
          </div>
          <div class="sg-theme-card">
            <div class="sg-theme-preview sg-theme-dark">
              <div class="sg-mini-header"></div>
              <div class="sg-mini-content"></div>
            </div>
            <h4>Dark Theme (Tools)</h4>
            <p>Used for: Calculators, Tools, Interactive features</p>
            <code>Background: var(--black) | Import tools.css</code>
          </div>
        </div>

        <h3 class="sg-subsection-title">When to Use Each Theme</h3>
        <div class="sg-usage-table">
          <div class="sg-usage-row">
            <strong>Light Theme</strong>
            <span>Content-heavy pages, reviews, guides, informational pages</span>
          </div>
          <div class="sg-usage-row">
            <strong>Dark Theme</strong>
            <span>Interactive tools, calculators, data-heavy interfaces</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Sections Section -->
    <section class="sg-section sg-section-alt">
      <div class="container">
        <h2 class="sg-section-title">Section Classes</h2>

        <div class="sg-token-table">
          <div class="sg-token-row">
            <code>.section</code>
            <span>Standard section padding (80px vertical)</span>
          </div>
          <div class="sg-token-row">
            <code>.section-light</code>
            <span>White background section</span>
          </div>
          <div class="sg-token-row">
            <code>.section-alt</code>
            <span>Gray-50 background for alternating sections</span>
          </div>
          <div class="sg-token-row">
            <code>.section-dark</code>
            <span>Charcoal background with white text</span>
          </div>
          <div class="sg-token-row">
            <code>.container</code>
            <span>Max-width 1200px, centered with padding</span>
          </div>
        </div>

        <h3 class="sg-subsection-title">Hero Sizes</h3>
        <div class="sg-token-table">
          <div class="sg-token-row">
            <code>.hero-standard</code>
            <span>64px padding - Most pages</span>
          </div>
          <div class="sg-token-row">
            <code>.hero-large</code>
            <span>80px padding - Reviews, detailed pages</span>
          </div>
          <div class="sg-token-row">
            <code>.hero-xl</code>
            <span>120px padding - Homepage only</span>
          </div>
        </div>
      </div>
    </section>

    <!-- File Structure Section -->
    <section class="sg-section">
      <div class="container">
        <h2 class="sg-section-title">CSS File Structure</h2>

        <div class="sg-file-tree">
          <div class="sg-file-item">
            <strong>src/styles/styles.css</strong>
            <span>Main design system - variables, typography, buttons, cards, layout</span>
          </div>
          <div class="sg-file-item">
            <strong>src/styles/global.css</strong>
            <span>Global resets and base styles</span>
          </div>
          <div class="sg-file-item">
            <strong>src/styles/tools.css</strong>
            <span>Dark theme for calculator/tool pages</span>
          </div>
          <div class="sg-file-item">
            <strong>src/styles/spacing-system.css</strong>
            <span>Spacing utility classes</span>
          </div>
          <div class="sg-file-item">
            <strong>src/styles/utilities.css</strong>
            <span>Helper classes (text alignment, display, etc.)</span>
          </div>
        </div>

        <h3 class="sg-subsection-title">Import Order</h3>
        <div class="sg-code-block">
          <code>// In BaseLayout.astro (already configured)</code>
          <code>import '../styles/styles.css';</code>
          <code>import '../styles/global.css';</code>
          <code>import '../styles/spacing-system.css';</code>
          <code>import '../styles/utilities.css';</code>
          <code></code>
          <code>// For tool pages only:</code>
          <code>import '../styles/tools.css';</code>
        </div>
      </div>
    </section>

    <!-- SEO & Accessibility Section -->
    <section class="sg-section sg-section-alt">
      <div class="container">
        <h2 class="sg-section-title">SEO & Accessibility (Mandatory)</h2>
        <p class="body-large" style="margin-bottom: var(--space-xl);">These rules are mandatory for all pages. Violations will cause PageSpeed and Google ranking penalties.</p>

        <h3 class="sg-subsection-title">Heading Hierarchy</h3>
        <div class="sg-rule-box sg-rule-error">
          <p><strong>RULE:</strong> Headings must be sequential. Never skip levels.</p>
          <div class="sg-code-compare">
            <div class="sg-code-wrong">
              <span class="sg-label-wrong">WRONG</span>
              <code>&lt;h1&gt;Page Title&lt;/h1&gt;</code>
              <code>&lt;h4&gt;Feature Title&lt;/h4&gt;</code>
            </div>
            <div class="sg-code-right">
              <span class="sg-label-right">CORRECT</span>
              <code>&lt;h1&gt;Page Title&lt;/h1&gt;</code>
              <code>&lt;h2&gt;Section&lt;/h2&gt;</code>
              <code>&lt;h3&gt;Feature Title&lt;/h3&gt;</code>
            </div>
          </div>
        </div>

        <h3 class="sg-subsection-title">Link Text</h3>
        <div class="sg-rule-box sg-rule-error">
          <p><strong>RULE:</strong> Links must have descriptive text. Never use generic phrases alone.</p>
          <div class="sg-token-table" style="margin-top: var(--space-md);">
            <div class="sg-token-row">
              <code class="sg-wrong-text">"Learn more"</code>
              <span>→</span>
              <code class="sg-right-text">"Read our advertiser disclosure"</code>
            </div>
            <div class="sg-token-row">
              <code class="sg-wrong-text">"Click here"</code>
              <span>→</span>
              <code class="sg-right-text">"View broker comparison"</code>
            </div>
            <div class="sg-token-row">
              <code class="sg-wrong-text">"Read more"</code>
              <span>→</span>
              <code class="sg-right-text">"Read the full AvaTrade review"</code>
            </div>
          </div>
        </div>

        <h3 class="sg-subsection-title">Image Dimensions</h3>
        <div class="sg-rule-box sg-rule-error">
          <p><strong>RULE:</strong> All <code>&lt;img&gt;</code> elements MUST have explicit <code>width</code> and <code>height</code> attributes to prevent layout shift (CLS).</p>
          <div class="sg-code-compare">
            <div class="sg-code-wrong">
              <span class="sg-label-wrong">WRONG</span>
              <code>&lt;img src="/logo.svg" alt="Logo"&gt;</code>
            </div>
            <div class="sg-code-right">
              <span class="sg-label-right">CORRECT</span>
              <code>&lt;img src="/logo.svg" alt="Logo" width="180" height="40"&gt;</code>
            </div>
          </div>
        </div>

        <h3 class="sg-subsection-title">Color Contrast (WCAG AA)</h3>
        <div class="sg-rule-box">
          <p><strong>RULE:</strong> Text must have 4.5:1 contrast ratio against background.</p>
          <div class="sg-contrast-grid">
            <div class="sg-contrast-item">
              <div class="sg-contrast-swatch sg-swatch-light">
                <span style="color: var(--gray-400);">Gray-400</span>
              </div>
              <span class="sg-label-wrong">FAILS on white</span>
            </div>
            <div class="sg-contrast-item">
              <div class="sg-contrast-swatch sg-swatch-light">
                <span style="color: var(--gray-600);">Gray-600</span>
              </div>
              <span class="sg-label-right">PASSES on white</span>
            </div>
            <div class="sg-contrast-item">
              <div class="sg-contrast-swatch sg-swatch-green">
