---
/**
 * AvaFutures Partner Code Page
 * Partner code for futures trading with TradingView integration
 */

import BaseLayout from '../../../../layouts/BaseLayout.astro';

const PARTNER_CODE = '128979';
const AFFILIATE_LINK = 'https://futures.avatrade.com/platforms/tradingview?tag=128979';

const now = new Date();
const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
const currentMonth = monthNames[now.getMonth()];
const currentYear = now.getFullYear();
const dateString = `${currentMonth} ${currentYear}`;

const faqData = [
  {
    question: 'What is the AvaFutures partner code?',
    answer: `The AvaFutures partner code is ${PARTNER_CODE}. Enter this code during registration to receive your exclusive welcome bonus. This code is verified and active for ${dateString}.`
  },
  {
    question: 'How do I enter the AvaFutures partner code?',
    answer: `During registration, look for the partner code or referral code field. Enter ${PARTNER_CODE} to activate your bonus. Complete the registration to qualify.`
  },
  {
    question: 'Is AvaFutures partner code the same as AvaTrade?',
    answer: `Yes, AvaFutures uses the same partner code system as AvaTrade since it's part of the AvaTrade group. Partner code ${PARTNER_CODE} works for both platforms.`
  },
  {
    question: 'Can I use AvaFutures in Spain?',
    answer: 'Yes, AvaFutures is available to Spanish residents. Unlike CFDs which face CNMV advertising restrictions, futures trading operates under different regulations and is accessible in Spain.'
  },
  {
    question: 'What is the minimum deposit for AvaFutures?',
    answer: 'Minimum deposit requirements vary by account type and region. Check the AvaFutures website for current minimum deposit requirements in your jurisdiction.'
  },
  {
    question: 'Does AvaFutures work with TradingView?',
    answer: 'Yes, AvaFutures offers full TradingView integration. You can trade futures directly from TradingView charts using your AvaFutures account.'
  }
];

const pageTitle = `AvaFutures Partner Code ${PARTNER_CODE} - Exclusive Bonus ${currentYear}`;
const pageDescription = `The AvaFutures partner code is ${PARTNER_CODE}. Enter this code during registration to unlock your exclusive welcome bonus for futures trading. Verified ${dateString}.`;
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
>
  <!-- SEO Meta Tags -->
  <meta slot="head" name="keywords" content="AvaFutures partner code, avafutures partner code, AvaFutures bonus code, AvaFutures promo code, 128979, avafutures code, AvaFutures TradingView">
  <link slot="head" rel="canonical" href="https://tradetheday.com/brokers/avafutures/partner-code">

  <!-- Schema -->
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": pageTitle,
    "description": pageDescription,
    "url": "https://tradetheday.com/brokers/avafutures/partner-code",
    "mainEntity": {
      "@type": "Offer",
      "name": `AvaFutures Welcome Bonus with Partner Code ${PARTNER_CODE}`,
      "description": "Exclusive AvaFutures welcome bonus for futures trading",
      "price": "0",
      "priceCurrency": "USD",
      "availability": "https://schema.org/InStock"
    }
  })} />

  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqData.map(faq => ({
      "@type": "Question",
      "name": faq.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": faq.answer
      }
    }))
  })} />

  <!-- Breadcrumb -->
  <nav class="breadcrumb-nav">
    <div class="container">
      <span class="breadcrumb">
        <a href="/">Home</a>
        <span class="breadcrumb-sep">&rsaquo;</span>
        <a href="/brokers">Brokers</a>
        <span class="breadcrumb-sep">&rsaquo;</span>
        <a href="/brokers/avafutures">AvaFutures</a>
        <span class="breadcrumb-sep">&rsaquo;</span>
        <span class="breadcrumb-current">Partner Code</span>
      </span>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="code-hero">
    <div class="container">
      <div class="hero-content">
        <span class="verified-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
          Verified {dateString}
        </span>

        <h1>AvaFutures Partner Code</h1>

        <div class="code-box">
          <span class="code-label">Your Partner Code</span>
          <div class="code-display">
            <span class="code-value">{PARTNER_CODE}</span>
            <button class="copy-btn" id="copyBtn" data-code={PARTNER_CODE}>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
              </svg>
              Copy
            </button>
          </div>
        </div>

        <p class="hero-subtitle">
          Enter code <strong>{PARTNER_CODE}</strong> during AvaFutures registration to unlock
          your exclusive welcome bonus for futures trading.
        </p>

        <a href={AFFILIATE_LINK} class="btn btn-primary btn-xl" target="_blank" rel="noopener">
          Open AvaFutures Account with Code ‚Üí
        </a>

        <div class="trust-badges">
          <span class="trust-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            AvaTrade Group
          </span>
          <span class="trust-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
            </svg>
            TradingView Integration
          </span>
          <span class="trust-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            Instant Activation
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- How to Use Section -->
  <section class="section" id="how-to-claim">
    <div class="container">
      <h2 class="section-title">How to Use AvaFutures Partner Code {PARTNER_CODE}</h2>

      <div class="steps-grid">
        <div class="step-card">
          <span class="step-number">1</span>
          <h3>Click Registration Link</h3>
          <p>Click the button above to visit AvaFutures with partner code {PARTNER_CODE} ready to apply.</p>
        </div>
        <div class="step-card">
          <span class="step-number">2</span>
          <h3>Enter Your Details</h3>
          <p>Fill in your personal information and look for the partner code field during registration.</p>
        </div>
        <div class="step-card">
          <span class="step-number">3</span>
          <h3>Verify Partner Code</h3>
          <p>Ensure {PARTNER_CODE} appears in the partner code field. Enter it manually if needed.</p>
        </div>
        <div class="step-card">
          <span class="step-number">4</span>
          <h3>Complete & Fund</h3>
          <p>Complete verification and make your first deposit to activate your welcome bonus.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why AvaFutures Section -->
  <section class="section section-alt">
    <div class="container">
      <h2 class="section-title">Why Trade Futures with AvaFutures?</h2>

      <div class="features-grid">
        <div class="feature-card">
          <span class="feature-icon">üìä</span>
          <h3>TradingView Integration</h3>
          <p>Trade directly from TradingView charts with all your favourite indicators and tools.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">üèõÔ∏è</span>
          <h3>Exchange-Traded</h3>
          <p>Futures are traded on regulated exchanges with central clearing and transparency.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">üåç</span>
          <h3>Available in Spain</h3>
          <p>Unlike CFDs, futures trading is available to Spanish residents under different regulations.</p>
        </div>
        <div class="feature-card">
          <span class="feature-icon">üîí</span>
          <h3>AvaTrade Group</h3>
          <p>Backed by AvaTrade, a trusted broker since 2006 with multiple regulatory licenses.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Frequently Asked Questions</h2>
      <div class="faq-container">
        <div class="faq-list">
          {faqData.map(({ question, answer }) => (
            <details class="faq-item">
              <summary class="faq-question">{question}</summary>
              <div class="faq-answer">
                <p set:html={answer}></p>
              </div>
            </details>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="section section-dark">
    <div class="container">
      <div class="final-cta">
        <h2>Ready to Start Futures Trading?</h2>
        <p>Use partner code <strong>{PARTNER_CODE}</strong> to get your exclusive welcome bonus.</p>
        <a href={AFFILIATE_LINK} class="btn btn-primary btn-xl" target="_blank" rel="noopener">
          Open AvaFutures Account ‚Üí
        </a>
        <p class="disclaimer">
          Futures trading involves substantial risk of loss and is not suitable for all investors.
          Consider whether futures trading is appropriate for your circumstances.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Breadcrumb */
  .breadcrumb-nav {
    background: var(--gray-50);
    padding: var(--space-sm) 0;
    border-bottom: 1px solid var(--gray-200);
  }

  .breadcrumb {
    font-size: var(--font-size-sm);
    color: var(--gray-600);
  }

  .breadcrumb a {
    color: var(--gray-600);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--brand-orange);
  }

  .breadcrumb-sep {
    margin: 0 var(--space-xs);
    color: var(--gray-400);
  }

  .breadcrumb-current {
    color: var(--gray-900);
    font-weight: var(--font-weight-medium);
  }

  /* Hero */
  .code-hero {
    background: linear-gradient(135deg, var(--charcoal) 0%, #1a1f2e 100%);
    padding: var(--space-3xl) 0;
    color: var(--white);
    text-align: center;
  }

  .hero-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .verified-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    background: rgba(16, 185, 129, 0.2);
    border: 1px solid rgba(16, 185, 129, 0.4);
    color: var(--success);
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-lg);
  }

  .code-hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin-bottom: var(--space-xl);
  }

  .code-box {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 72, 0, 0.5);
    border-radius: var(--radius-xl);
    padding: var(--space-lg);
    margin-bottom: var(--space-lg);
  }

  .code-label {
    display: block;
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--space-sm);
  }

  .code-display {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
  }

  .code-value {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 800;
    color: var(--brand-orange);
    font-family: monospace;
    letter-spacing: 0.1em;
  }

  .copy-btn {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    background: var(--white);
    border: none;
    border-radius: var(--radius-md);
    color: var(--charcoal);
    font-weight: var(--font-weight-semibold);
    cursor: pointer;
    transition: all 0.2s;
  }

  .copy-btn:hover {
    background: var(--brand-orange);
    color: var(--white);
  }

  .hero-subtitle {
    font-size: var(--font-size-lg);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-lg);
    line-height: 1.6;
  }

  .trust-badges {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    margin-top: var(--space-xl);
    flex-wrap: wrap;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.7);
  }

  .trust-item svg {
    color: var(--success);
  }

  /* Sections */
  .section {
    padding: var(--space-3xl) 0;
  }

  .section-alt {
    background: var(--gray-50);
  }

  .section-dark {
    background: linear-gradient(135deg, var(--charcoal) 0%, #1a1f2e 100%);
    color: var(--white);
  }

  .section-title {
    font-size: var(--font-size-2xl);
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .section-dark .section-title {
    color: var(--white);
  }

  /* Steps Grid */
  .steps-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
  }

  @media (max-width: 968px) {
    .steps-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .steps-grid {
      grid-template-columns: 1fr;
    }
  }

  .step-card {
    text-align: center;
    padding: var(--space-lg);
  }

  .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--brand-orange);
    color: var(--white);
    font-size: var(--font-size-xl);
    font-weight: 700;
    border-radius: 50%;
    margin-bottom: var(--space-md);
  }

  .step-card h3 {
    margin-bottom: var(--space-sm);
  }

  .step-card p {
    color: var(--gray-600);
    font-size: var(--font-size-sm);
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
  }

  @media (max-width: 968px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }

  .feature-card {
    background: var(--white);
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    text-align: center;
    border: 1px solid var(--gray-200);
  }

  .feature-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: var(--space-sm);
  }

  .feature-card h3 {
    font-size: var(--font-size-base);
    margin-bottom: var(--space-xs);
  }

  .feature-card p {
    font-size: var(--font-size-sm);
    color: var(--gray-600);
    margin: 0;
  }

  /* FAQ */
  .faq-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .faq-item {
    background: var(--white);
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
  }

  .faq-question {
    font-weight: var(--font-weight-semibold);
    cursor: pointer;
    list-style: none;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question::before {
    content: "+";
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background: var(--gray-100);
    border-radius: 50%;
    font-weight: bold;
    flex-shrink: 0;
    transition: all 0.2s;
  }

  details[open] .faq-question::before {
    content: "-";
    background: var(--brand-orange);
    color: var(--white);
  }

  .faq-answer {
    margin-top: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid var(--gray-100);
    color: var(--gray-700);
    line-height: 1.7;
  }

  .faq-answer p {
    margin: 0;
  }

  /* Final CTA */
  .final-cta {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .final-cta h2 {
    color: var(--white);
    margin-bottom: var(--space-md);
  }

  .final-cta p {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-lg);
  }

  .final-cta .disclaimer {
    font-size: var(--font-size-xs);
    color: rgba(255, 255, 255, 0.5);
    margin-top: var(--space-lg);
  }
</style>

<script>
  // Copy button functionality
  const copyBtn = document.getElementById('copyBtn');
  if (copyBtn) {
    copyBtn.addEventListener('click', () => {
      const code = copyBtn.dataset.code;
      navigator.clipboard.writeText(code).then(() => {
        const originalHTML = copyBtn.innerHTML;
        copyBtn.innerHTML = `
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          Copied!
        `;
        setTimeout(() => {
          copyBtn.innerHTML = originalHTML;
        }, 2000);
      });
    });
  }
</script>
