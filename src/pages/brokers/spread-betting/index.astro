        {brokers.map((broker) => (
          <div class={`broker-card ${broker.featured ? 'featured' : ''}`}>
            <div class="broker-header">
              <div class="broker-logo">{broker.logo}</div>
              <div class="broker-info">
                <h3 class="broker-name">{broker.name}</h3>
                <div class="broker-rating">{broker.rating}</div>
              </div>
            </div>
            <p class="broker-description">{broker.description}</p>
            <div class="pros-cons">
              <div class="pros-section">
                <div class="pros-title">Pros</div>
