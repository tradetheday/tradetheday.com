<script is:inline>
// Copy code functionality
document.getElementById('copyBtn')?.addEventListener('click', function() {
  const code = '128979';
  navigator.clipboard.writeText(code).then(function() {
    const btn = document.getElementById('copyBtn');
    const text = document.getElementById('copyText');
    const icon = document.getElementById('copyIcon');

    if (btn) btn.classList.add('copied');
    if (icon) icon.innerHTML = '<path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="2" fill="none"/>';
    if (text) text.textContent = 'Copied!';

    setTimeout(() => {
      if (btn) btn.classList.remove('copied');
      if (icon) icon.innerHTML = '<rect x="9" y="9" width="13" height="13" rx="2" ry="2" stroke="currentColor" stroke-width="2" fill="none"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1" stroke="currentColor" stroke-width="2" fill="none"></path>';
      if (text) text.textContent = 'Copy Code';
    }, 2000);
  });
});

// FAQ toggle
document.querySelectorAll('.pc-faq-question').forEach(button => {
  button.addEventListener('click', () => {
    const item = button.parentElement;
    const isActive = item.classList.contains('active');

    // Close all
    document.querySelectorAll('.pc-faq-item').forEach(i => i.classList.remove('active'));

    // Open clicked if wasn't active
    if (!isActive) {
      item.classList.add('active');
    }
  });
});

// Country selector
document.getElementById('countrySelect')?.addEventListener('change', function() {
  const selected = this.value;

  document.querySelectorAll('.pc-country-panel').forEach(panel => {
    panel.classList.remove('active');
  });

  const activePanel = document.querySelector(`.pc-country-panel[data-country="${selected}"]`);
  if (activePanel) {
    activePanel.classList.add('active');
  }
});
</script>
