---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import Navigation from '../../../components/Navigation.astro';
import Chip from '../../../components/Chip.astro';
import ComparisonTable from '../../../components/ComparisonTable.astro';
import ProsCons from '../../../components/ProsCons.astro';
import FAQ from '../../../components/FAQ.astro';
import AnalystNotes from '../../../components/AnalystNotes.astro';
import { getPropFirmBySlug } from '../../../data/propfirms';
import { generateFAQSchema, generateReviewSchema, generateBreadcrumbSchema } from '../../../utils/seo';

// Get prop firm data
const firm = getPropFirmBySlug('ftmo');

if (!firm) {
  return Astro.redirect('/propfirms/');
}

// Page Configuration
const FIRM_NAME = 'FTMO';
const pageTitle = `FTMO Review 2026: Challenge Rules, Payouts & 10% Discount Code | TradeTheDay`;
const pageDescription = `Honest FTMO review by funded traders. See our ${firm.scores.overall}/5 rating, challenge breakdown, payout proof, and exclusive discount code ${firm.discountCode?.code} for 10% off.`;

// Navigation links
const navigationLinks = [
  { href: '#overview', text: 'Overview' },
  { href: '#challenges', text: 'Challenges' },
  { href: '#rules', text: 'Rules' },
  { href: '#payouts', text: 'Payouts' },
  { href: '#platforms', text: 'Platforms' },
  { href: '#pros-cons', text: 'Pros & Cons' },
  { href: '#verdict', text: 'Verdict' }
];

// Hero scorecard
const heroScorecard = [
  { value: firm.maxFunding, label: 'Max Funding' },
  { value: firm.profitSplit, label: 'Profit Split' },
  { value: firm.startingPrice, label: 'From' },
