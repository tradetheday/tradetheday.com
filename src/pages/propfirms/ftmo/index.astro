// Challenge comparison table
const challengeTableHeaders = ['Account Size', 'Price', 'Profit Target', 'Max Drawdown', 'Daily Drawdown', 'Time Limit'];
const challengeRows = firm.challenges.map(challenge => ({
  cells: [
    { content: challenge.accountSize, type: 'text', highlight: 'neutral' },
    { content: challenge.price, type: 'text', highlight: 'neutral' },
    { content: challenge.profitTarget, type: 'text', highlight: 'good' },
    { content: challenge.maxDrawdown, type: 'text', highlight: 'warning' },
    { content: challenge.dailyDrawdown, type: 'text', highlight: 'warning' },
    { content: challenge.timeLimit, type: 'text', highlight: 'neutral' }
  ]
}));

