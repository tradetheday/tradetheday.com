const competitorRows = [
  {
    cells: [
      { content: 'Max Funding', type: 'text' },
      { content: '$400,000', type: 'text', highlight: 'good' },
      { content: '$600,000', type: 'text', highlight: 'best' },
      { content: '$400,000', type: 'text', highlight: 'good' },
      { content: '$300,000', type: 'text', highlight: 'neutral' }
    ]
  },
  {
    cells: [
      { content: 'Profit Split', type: 'text' },
      { content: 'Up to 90%', type: 'text', highlight: 'best' },
      { content: 'Up to 90%', type: 'text', highlight: 'best' },
      { content: '80%', type: 'text', highlight: 'neutral' },
      { content: '85%', type: 'text', highlight: 'good' }
    ]
  },
  {
    cells: [
      { content: 'Profit Target', type: 'text' },
      { content: '10%', type: 'text', highlight: 'neutral' },
      { content: '10%', type: 'text', highlight: 'neutral' },
      { content: '8%', type: 'text', highlight: 'best' },
      { content: '8%', type: 'text', highlight: 'best' }
    ]
  },
  {
    cells: [
      { content: 'Daily Drawdown', type: 'text' },
      { content: '5%', type: 'text', highlight: 'warning' },
      { content: '5%', type: 'text', highlight: 'warning' },
      { content: '4%', type: 'text', highlight: 'warning' },
      { content: '5%', type: 'text', highlight: 'warning' }
    ]
  },
  {
    cells: [
      { content: 'Payout Reliability', type: 'text' },
      { content: 'Excellent', type: 'text', highlight: 'best' },
      { content: 'Good', type: 'text', highlight: 'good' },
      { content: 'Good', type: 'text', highlight: 'good' },
      { content: 'Closed*', type: 'text', highlight: 'warning' }
    ]
  },
  {
    cells: [
      { content: 'Total Paid Out', type: 'text' },
      { content: '$200M+', type: 'text', highlight: 'best' },
      { content: '$50M+', type: 'text', highlight: 'good' },
      { content: '$20M+', type: 'text', highlight: 'neutral' },
      { content: 'N/A', type: 'text', highlight: 'warning' }
    ]
  }
];

// FAQ data
const faqItems = [
  {
    question: 'Is FTMO legitimate?',
    answer: 'Yes, FTMO is one of the most legitimate and trusted prop firms in the industry. Founded in 2015 in Prague, Czech Republic, they have paid out over $200 million to traders worldwide. They are registered as a legal entity and have built a strong reputation over 9+ years of operation.'
  },
  {
    question: 'How does the FTMO Challenge work?',
    answer: 'The FTMO Challenge is a two-phase evaluation. In Phase 1, you must reach a 10% profit target within 30 days while staying within the 10% maximum drawdown and 5% daily drawdown limits. Phase 2 (Verification) requires a 5% profit target in 60 days with the same risk rules. Pass both, and you become a funded FTMO Trader.'
