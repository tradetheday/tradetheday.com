      <div class="page-section-header">
        <h2 class="page-section-title">Most Popular Markets</h2>
        <p class="page-section-description">
          Start with these top-performing markets favored by professional traders worldwide
        </p>
      </div>

      <div class="example-grid">
        {popularMarkets.map((market) => (
          <a href={`/trade/${market.category}/`} class="example-card">
            <div class={`example-card-icon ${market.gradientClass}`}>
              {market.icon}
            </div>
            <div class="example-card-info">
              <span class="example-card-name">{market.name}</span>
              <span class="example-card-symbol">{market.symbol}</span>
            </div>
            <span class="example-card-tag">{market.category}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- TRADING CATEGORIES SECTION -->
