---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
>
  <!-- BREADCRUMB -->
  <Breadcrumb slot="breadcrumb" items={[
    { text: 'Home', href: '/' },
    { text: 'Trade', current: true }
