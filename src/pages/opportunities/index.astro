    <div class="container">
      <div class="alerts-header">
        <h2 class="section-title">Market Alerts</h2>
        <div class="live-indicator">
          <span class="live-dot"></span>
          Live Updates
        </div>
      </div>
      
      <div class="alerts-grid">
        {marketAlerts.map((alert) => (
          <div class={`alert-card alert-${alert.type}`}>
