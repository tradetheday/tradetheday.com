---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Fragment slot="breadcrumb">
    <Breadcrumb items={breadcrumbItems} />
  </Fragment>

  <!-- Schema.org markup -->
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "SoftwareApplication",
    "name": "MetaTrader 4",
    "alternateName": "MT4",
    "applicationCategory": "FinanceApplication",
    "operatingSystem": "Windows, macOS, iOS, Android, Web",
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "USD"
    },
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "4.5",
      "ratingCount": "50000"
    }
  })} />

  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqData.map(faq => ({
      "@type": "Question",
      "name": faq.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": faq.answer
      }
    }))
  })} />

  <!-- Hero -->
  <section class="mt4-hero">
    <div class="container">
      <div class="mt4-hero-badge">
        <span class="badge-icon">üìä</span>
        <span>World's Most Popular Trading Platform</span>
      </div>
      <h1 class="heading-1">MetaTrader 4: The Ultimate MT4 Review {currentYear}</h1>
      <p class="body-large mt4-hero-sub">
        MetaTrader 4, also known as "MT4", is a free trading platform designed for forex and futures traders. Find the best MT4 brokers, learn all features, and start trading today.
      </p>
      <div class="hero-stats">
        <div class="hero-stat">
          <span class="hero-stat-value">{mt4Brokers.length}+</span>
          <span class="hero-stat-label">MT4 Brokers</span>
        </div>
        <div class="hero-stat">
          <span class="hero-stat-value">16M+</span>
          <span class="hero-stat-label">Traders Worldwide</span>
        </div>
        <div class="hero-stat">
          <span class="hero-stat-value">Free</span>
          <span class="hero-stat-label">To Download</span>
        </div>
        <div class="hero-stat">
          <span class="hero-stat-value">2005</span>
          <span class="hero-stat-label">Since</span>
        </div>
      </div>
    </div>
  </section>

  <TrustBadges variant="light" compact={true} />

  <!-- Anchor Navigation -->
  <nav class="anchor-nav">
    <div class="container">
      <div class="anchor-links">
        {anchorItems.map((item) => (
          <a href={item.href} class="anchor-link">{item.text}</a>
        ))}
      </div>
    </div>
  </nav>

  <!-- Best MT4 Brokers List -->
  <section class="section" id="brokers">
    <div class="container">
      <h2 class="heading-2">Best MetaTrader 4 Brokers {currentYear}</h2>
      <p class="section-intro">Our top-rated brokers offering MetaTrader 4, ranked by spreads, regulation, and overall value. All brokers are regulated and expert-reviewed.</p>

      <div class="broker-list">
        {mt4Brokers.map((broker, index) => (
          <div class={`broker-card ${index === 0 ? 'broker-card--top' : ''}`}>
            {index === 0 && <span class="top-badge">Editor's Choice</span>}
            <div class="broker-card-rank">#{index + 1}</div>

            <div class="broker-card-main">
              <div class="broker-card-header">
                <h3 class="broker-name">{broker.name}</h3>
                <div class="broker-rating">
                  <span class="rating-score">{broker.scores.overall}</span>
                  <span class="rating-stars">{'‚òÖ'.repeat(Math.floor(broker.scores.overall))}</span>
                </div>
              </div>

              <p class="broker-tagline">{broker.tagline}</p>

              <div class="broker-stats">
                <div class="broker-stat">
                  <span class="stat-label">Spreads</span>
                  <span class="stat-value">{broker.spreadsFrom}</span>
                </div>
                <div class="broker-stat">
                  <span class="stat-label">Min Deposit</span>
                  <span class="stat-value">{broker.minDepositDisplay}</span>
                </div>
                <div class="broker-stat">
                  <span class="stat-label">Regulation</span>
                  <span class="stat-value">{broker.regulations[0]?.authority}</span>
