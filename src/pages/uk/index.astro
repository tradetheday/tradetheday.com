                const fcaLicense = broker.regulations.find(r => r.authority === 'FCA');
                const hasSpreadBetting = ['ig', 'city-index', 'avatrade', 'pepperstone'].includes(broker.id);
                return (
                  <tr class={broker.promoted ? 'promoted-row' : ''}>
