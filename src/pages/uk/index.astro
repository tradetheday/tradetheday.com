</BaseLayout>

<style>
  /* Hero Section */
  .geo-hero {
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: var(--space-3xl) 0;
  }

  /* UK Flag Animation */
  .flag-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
    background: #1a1a1a;
  }

  .flag-container {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 150%;
    height: 130%;
    transform: translate(-50%, -50%);
  }

  .flag-fabric {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    animation: flagWave 6s ease-in-out infinite;
  }

  .uk-flag {
    position: relative;
  }

  .uk-blue-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, #012169 0%, #0a2d7a 25%, #012169 50%, #001147 75%, #012169 100%);
    background-size: 200% 100%;
    animation: stripeShift 5s ease-in-out infinite;
  }

  /* White diagonal stripes */
  .uk-diagonal-white-1, .uk-diagonal-white-2 {
    position: absolute;
    background: #ffffff;
    width: 20%;
    height: 150%;
    top: -25%;
  }

  .uk-diagonal-white-1 {
    left: -5%;
    transform: rotate(35deg);
    transform-origin: center;
  }

  .uk-diagonal-white-2 {
    right: -5%;
    transform: rotate(-35deg);
    transform-origin: center;
  }

  /* Red diagonal stripes */
  .uk-diagonal-red-1, .uk-diagonal-red-2 {
    position: absolute;
    background: #c8102e;
    width: 8%;
    height: 150%;
    top: -25%;
  }

  .uk-diagonal-red-1 {
    left: 0%;
    transform: rotate(35deg);
    transform-origin: center;
  }

  .uk-diagonal-red-2 {
    right: 0%;
    transform: rotate(-35deg);
    transform-origin: center;
  }

  /* White cross */
  .uk-cross-white-h {
    position: absolute;
    background: #ffffff;
    width: 100%;
    height: 25%;
    top: 37.5%;
  }

  .uk-cross-white-v {
    position: absolute;
    background: #ffffff;
    width: 25%;
    height: 100%;
    left: 37.5%;
  }

  /* Red cross */
  .uk-cross-red-h {
    position: absolute;
    background: linear-gradient(90deg, #c8102e 0%, #d9243c 25%, #c8102e 50%, #a50d26 75%, #c8102e 100%);
    background-size: 200% 100%;
    animation: stripeShift 5s ease-in-out infinite;
    width: 100%;
    height: 15%;
    top: 42.5%;
  }

  .uk-cross-red-v {
    position: absolute;
    background: linear-gradient(180deg, #c8102e 0%, #d9243c 25%, #c8102e 50%, #a50d26 75%, #c8102e 100%);
    background-size: 100% 200%;
    animation: verticalShift 5s ease-in-out infinite;
    width: 15%;
    height: 100%;
    left: 42.5%;
  }

  @keyframes stripeShift {
    0%, 100% { background-position: 0% 0%; }
    50% { background-position: 100% 0%; }
  }

  @keyframes verticalShift {
    0%, 100% { background-position: 0% 0%; }
    50% { background-position: 0% 100%; }
  }

  @keyframes flagWave {
    0%, 100% { transform: skewX(0deg) scaleX(1) translateX(0); }
    25% { transform: skewX(1.5deg) scaleX(1.01) translateX(2px); }
    50% { transform: skewX(-1deg) scaleX(1.02) translateX(-1px); }
    75% { transform: skewX(0.8deg) scaleX(1.008) translateX(1px); }
  }

  .flag-sheen {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(100deg, transparent 0%, transparent 40%, rgba(255,255,255,0.12) 48%, rgba(255,255,255,0.18) 50%, rgba(255,255,255,0.12) 52%, transparent 60%, transparent 100%);
    animation: sheenMove 6s ease-in-out infinite;
    pointer-events: none;
  }

  @keyframes sheenMove {
    0% { transform: translateX(-100%); opacity: 0.8; }
    100% { transform: translateX(100%); opacity: 0.8; }
  }

  .flag-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.5) 50%, rgba(0, 0, 0, 0.6) 100%);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: var(--white);
    padding: var(--space-2xl) var(--space-lg);
  }

  .hero-social-proof {
    margin-bottom: var(--space-lg);
  }

  .social-proof-badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: rgba(255, 72, 0, 0.15);
    border: 1px solid rgba(255, 72, 0, 0.3);
    color: var(--white);
    padding: 10px 20px;
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
  }

  .badge-flag {
    font-size: 1.2rem;
    line-height: 1;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin-bottom: var(--space-md);
    text-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: var(--font-size-lg);
    max-width: 600px;
    margin: 0 auto var(--space-xl);
    opacity: 0.9;
    line-height: 1.7;
    text-shadow: 0 2px 15px rgba(0, 0, 0, 0.4);
  }

  .hero-cta {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-lg);
  }

  .hero-cta .btn-outline {
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.4);
    color: var(--white);
    backdrop-filter: blur(8px);
  }

  .hero-cta .btn-outline:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: var(--white);
  }

  .hero-trust-row {
    display: flex;
