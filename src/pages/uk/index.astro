  }

  /* Main Content */
  .geo-page {
    padding: var(--space-2xl) 0 var(--space-3xl);
  }

  .content-section {
    margin-bottom: var(--space-3xl);
  }

  .content-section h2 {
    font-size: var(--font-size-2xl);
