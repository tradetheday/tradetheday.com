---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  schema={pageSchema}
>
  <!-- BREADCRUMB -->
  <Breadcrumb slot="breadcrumb" items={[
    { text: 'Home', href: '/' },
    { text: 'Instruments', current: true }
  ]} />

  <!-- HERO SECTION -->
  <section class="page-hero">
    <div class="container">
      <div class="page-hero-badge">
        <span class="page-hero-badge-icon">üìà</span>
        TRADING INSTRUMENTS
      </div>

      <h1>Trade <span>1,000+</span> Global Instruments</h1>

      <p class="page-hero-description">
        Access forex, stocks, indices, cryptocurrencies, and commodities through our partner brokers. Find the perfect markets for your trading style and goals.
      </p>

      <div class="page-hero-stats">
        {heroStats.map((stat) => (
          <div class="page-hero-stat">
            <span class="page-hero-stat-icon">{stat.icon}</span>
            <span class="page-hero-stat-value">{stat.value}</span>
            <span class="page-hero-stat-label">{stat.label}</span>
          </div>
        ))}
      </div>

      <div class="page-hero-cta">
        <a href="/compare/" class="btn btn-primary btn-lg">Find Your Broker</a>
        <a href="/trade/" class="btn btn-ghost-light btn-lg">Explore Markets</a>
      </div>
    </div>
  </section>

  <!-- INSTRUMENT CATEGORIES SECTION -->
  <section class="page-section">
    <div class="container">
      <div class="page-section-header">
        <h2 class="page-section-title">Choose Your Asset Class</h2>
        <p class="page-section-description">
          Each instrument type offers unique opportunities. Explore the markets that match your trading strategy and risk tolerance.
        </p>
      </div>

      <div class="category-grid">
        {instrumentCategories.map((category) => (
          <a href={category.href} class="category-card">
            <div class={`category-card-header ${category.gradientClass}`}>
              <span class="category-card-icon">{category.icon}</span>
              <h3 class="category-card-title">{category.title}</h3>
              <p class="category-card-subtitle">{category.subtitle}</p>
            </div>

            <div class="category-card-body">
              <p class="category-card-description">{category.description}</p>

              <div class="category-card-features">
                {category.features.map((feature) => (
                  <span class="category-card-feature">
                    <span class="category-card-feature-icon">‚úì</span>
                    {feature}
                  </span>
                ))}
              </div>

              <div class="category-card-stats">
                {Object.entries(category.stats).map(([key, value]) => (
                  <div class="category-card-stat">
                    <span class="category-card-stat-value">{value}</span>
                    <span class="category-card-stat-label">{key.replace(/([A-Z])/g, ' $1').trim()}</span>
                  </div>
                ))}
              </div>

              <span class="category-card-cta">
                Explore {category.title} ‚Üí
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- POPULAR INSTRUMENTS SECTION -->
  <section class="page-section page-section-alt">
    <div class="container">
      <div class="page-section-header">
        <h2 class="page-section-title">Most Popular Instruments</h2>
        <p class="page-section-description">
          These are the most traded instruments across our partner brokers
        </p>
      </div>

      <div class="example-grid">
        {popularExamples.map((example) => (
          <a href={`/trade/${example.category}/`} class="example-card">
            <div class={`example-card-icon ${example.gradientClass}`}>
              {example.icon}
            </div>
            <div class="example-card-info">
              <span class="example-card-name">{example.name}</span>
              <span class="example-card-symbol">{example.symbol}</span>
            </div>
            <span class="example-card-tag">{example.category}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- ADVANTAGES SECTION -->
  <section class="page-section">
    <div class="container">
      <div class="page-section-header">
        <h2 class="page-section-title">Why Trade With Our Partners</h2>
        <p class="page-section-description">
          Access professional-grade trading conditions through our carefully vetted partner brokers
        </p>
      </div>

      <div class="advantage-grid">
        {tradingAdvantages.map((advantage) => (
          <div class="advantage-card">
            <div class="advantage-card-icon">{advantage.icon}</div>
            <h3 class="advantage-card-title">{advantage.title}</h3>
            <p class="advantage-card-description">{advantage.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- RISK WARNING SECTION -->
  <section class="section section-warm">
    <div class="container">
      <div class="callout callout-warning" style="max-width: 900px; margin: 0 auto;">
        <h3 style="margin-bottom: var(--space-md); color: var(--charcoal);">Important Risk Information</h3>
        <p class="body-sm" style="margin-bottom: var(--space-md);">
          Trading derivatives and CFDs involves significant risk. <strong>Between 72-89% of retail investor accounts lose money</strong> when trading these instruments. You should consider whether you understand how these products work and whether you can afford to take the high risk of losing your money.
        </p>
        <p class="body-sm">
          The instruments listed on this page may not be available in all jurisdictions. Please check with your broker for availability in your region.
        </p>
      </div>
    </div>
  </section>

  <!-- FINAL CTA SECTION -->
  <section class="final-cta">
    <div class="container">
      <div class="final-cta-content">
        <h2 class="final-cta-title">Ready to Start Trading?</h2>
        <p class="final-cta-description">
          Compare regulated brokers and find the perfect platform for your trading needs. Get started in minutes with as little as $100.
        </p>
        <div class="final-cta-buttons">
          <a href="/compare/" class="btn btn-primary btn-lg">Find My Perfect Broker</a>
          <a href="/brokers/" class="btn btn-ghost-light btn-lg">Compare All Brokers</a>
        </div>
        <div class="final-cta-features">
          <span class="final-cta-feature">‚úì Regulated brokers only</span>
          <span class="final-cta-feature">‚úì Free demo accounts</span>
          <span class="final-cta-feature">‚úì 24/7 support available</span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
