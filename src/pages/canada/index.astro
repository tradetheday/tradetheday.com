const breadcrumbItems = [
  { text: 'Home', href: '/' },
  { text: 'Canada', current: true }
];

// Get brokers that accept Canadian clients (tier 1 & 2 regulated)
const canadianBrokers = brokers.filter(b =>
  b.brokerType !== 'crypto' &&
  b.regulations.some(r => r.tier === 1 || r.tier === 2)
).sort((a, b) => b.scores.overall - a.scores.overall);

const avatrade = brokers.find(b => b.id === 'avatrade');

const faqQuestions = [
  {
    question: "Is forex trading legal in Canada?",
    answer: "Yes, forex trading is fully legal in Canada. However, the regulatory landscape is complex, with different provinces having their own securities commissions. IIROC (Investment Industry Regulatory Organization of Canada) oversees investment dealers, while some traders use internationally regulated brokers."
  },
  {
    question: "What is IIROC and do I need an IIROC broker?",
    answer: "IIROC (Investment Industry Regulatory Organization of Canada) regulates investment dealers and trading activity on debt and equity markets. While IIROC-regulated brokers offer local protection, many Canadian traders use internationally regulated brokers (FCA, ASIC, CySEC) which often offer better trading conditions and more instrument choices."
  },
  {
    question: "Can Canadians trade with offshore brokers?",
    answer: "Yes, Canadians can legally trade with offshore brokers regulated by reputable authorities like the FCA (UK), ASIC (Australia), or CySEC (Cyprus). These brokers often offer better leverage, lower fees, and more trading instruments than locally regulated options."
  },
  {
    question: "What leverage is available to Canadian forex traders?",
    answer: "Leverage varies by broker. IIROC-regulated brokers typically offer lower leverage (around 50:1), while offshore brokers regulated by FCA or CySEC offer up to 30:1 on major pairs. Some offshore brokers provide higher leverage through entities in other jurisdictions."
  },
  {
    question: "Can I trade forex with CAD (Canadian Dollar)?",
    answer: "Yes, many brokers offer CAD-denominated accounts. This allows you to deposit and withdraw in Canadian dollars and trade CAD pairs like USD/CAD, CAD/JPY, and EUR/CAD directly without conversion fees."
  },
  {
    question: "Are forex profits taxable in Canada?",
    answer: "Yes, forex trading profits are taxable in Canada. They may be treated as either business income (fully taxable) or capital gains (50% taxable) depending on factors like trading frequency and intent. The CRA provides guidelines, but consult a tax professional for personal advice."
  }
];

// Schema.org markup
const schemaData = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": pageTitle,
  "description": pageDescription,
  "author": {
    "@type": "Organization",
    "name": "TradeTheDay"
  },
  "publisher": {
    "@type": "Organization",
    "name": "TradeTheDay",
    "url": "https://tradetheday.com"
  },
  "datePublished": "2026-01-15",
  "dateModified": "2026-01-27"
};
