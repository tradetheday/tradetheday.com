---
import BaseLayout from '../layouts/BaseLayout.astro';
import TrustBadges from '../components/TrustBadges.astro';
import Testimonials from '../components/Testimonials.astro';
import ScarcityCountdown from '../components/ScarcityCountdown.astro';
import AnalystNotes from '../components/AnalystNotes.astro';
import TradingResults from '../components/TradingResults.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import { brokers } from '../data/brokers';

const pageTitle = "Best Trading Brokers 2026 - AI-Powered Broker Matching | TradeTheDay";
const pageDescription = "Find your perfect broker in 30 seconds. Compare 5 regulated brokers, claim exclusive bonuses up to $10,000, and start trading with confidence. 100% free.";
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  ogType="website"
>
  <!-- HERO SECTION - Cialdini Optimized -->
  <section class="hero-clean">
    <!-- Animated Chart Background -->
    <div class="hero-chart-bg">
      <svg viewBox="0 0 1200 400" preserveAspectRatio="none" class="hero-chart-svg">
        <!-- Grid lines -->
        <g class="chart-grid" stroke="rgba(255,255,255,0.03)" stroke-width="1">
          <line x1="0" y1="80" x2="1200" y2="80" />
          <line x1="0" y1="160" x2="1200" y2="160" />
          <line x1="0" y1="240" x2="1200" y2="240" />
          <line x1="0" y1="320" x2="1200" y2="320" />
        </g>
        <!-- Main chart line - climbing trend -->
        <path
          class="chart-line"
          d="M0,350 C100,340 150,320 200,310 C280,295 320,300 400,270 C480,240 520,250 600,200 C680,150 720,170 800,120 C880,70 920,90 1000,50 C1080,10 1150,30 1200,20"
          fill="none"
          stroke="url(#chartGradient)"
          stroke-width="3"
          stroke-linecap="round"
        />
        <!-- Glow effect -->
        <path
          class="chart-line-glow"
          d="M0,350 C100,340 150,320 200,310 C280,295 320,300 400,270 C480,240 520,250 600,200 C680,150 720,170 800,120 C880,70 920,90 1000,50 C1080,10 1150,30 1200,20"
          fill="none"
          stroke="url(#chartGradient)"
          stroke-width="8"
          stroke-linecap="round"
          opacity="0.3"
        />
        <!-- Area fill under the line -->
        <path
          class="chart-area"
          d="M0,350 C100,340 150,320 200,310 C280,295 320,300 400,270 C480,240 520,250 600,200 C680,150 720,170 800,120 C880,70 920,90 1000,50 C1080,10 1150,30 1200,20 L1200,400 L0,400 Z"
          fill="url(#areaGradient)"
        />
        <!-- Data points along the line -->
        <g class="chart-points">
          <circle class="chart-point p1" cx="200" cy="310" r="5" fill="var(--brand-orange)"/>
          <circle class="chart-point p2" cx="400" cy="270" r="5" fill="var(--brand-orange)"/>
          <circle class="chart-point p3" cx="600" cy="200" r="5" fill="var(--brand-orange)"/>
          <circle class="chart-point p4" cx="800" cy="120" r="5" fill="var(--brand-orange)"/>
          <circle class="chart-point p5" cx="1000" cy="50" r="6" fill="var(--brand-orange)"/>
        </g>
        <!-- Point glow effects -->
        <g class="chart-point-glows">
          <circle class="chart-point-glow pg1" cx="200" cy="310" r="12" fill="var(--brand-orange)" opacity="0.3"/>
          <circle class="chart-point-glow pg2" cx="400" cy="270" r="12" fill="var(--brand-orange)" opacity="0.3"/>
          <circle class="chart-point-glow pg3" cx="600" cy="200" r="12" fill="var(--brand-orange)" opacity="0.3"/>
          <circle class="chart-point-glow pg4" cx="800" cy="120" r="12" fill="var(--brand-orange)" opacity="0.3"/>
          <circle class="chart-point-glow pg5" cx="1000" cy="50" r="15" fill="var(--brand-orange)" opacity="0.4"/>
        </g>
        <defs>
          <linearGradient id="chartGradient" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="rgba(255,72,0,0.3)" />
            <stop offset="50%" stop-color="rgba(255,72,0,0.7)" />
            <stop offset="100%" stop-color="rgba(255,72,0,1)" />
          </linearGradient>
          <linearGradient id="areaGradient" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" stop-color="rgba(255,72,0,0.15)" />
            <stop offset="100%" stop-color="rgba(255,72,0,0)" />
          </linearGradient>
        </defs>
      </svg>
    </div>
    <div class="container">
      <div class="hero-content">
        <!-- Social Proof Badge (Cialdini) -->
        <div class="hero-social-proof">
          <span class="social-proof-badge">
            <span class="social-proof-dot"></span>
            Trusted by 12,847+ traders this month
          </span>
        </div>

        <h1 class="hero-title">
          Your Broker Is Costing You Thousands<br>
          <span class="hero-title-accent">Trade The Day. Win The Year.</span>
        </h1>
        <p class="hero-subtitle">
          97% of traders pick the wrong broker. The result? $4,847/year in unnecessary fees. Our AI matches you with the perfect broker in 30 seconds. Free. No signup.
        </p>
        <div class="hero-cta-group">
          <a href="/find-broker/" class="btn btn-primary btn-xl">
            Find My Perfect Broker
            <span class="btn-arrow">‚Üí</span>
          </a>
          <a href="/brokers/" class="btn btn-ghost btn-xl">
            Compare All Brokers
          </a>
        </div>

        <!-- Trust Indicators (Reciprocity + Authority) -->
        <div class="hero-trust-row">
          <span class="hero-trust-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
            100% Free
          </span>
          <span class="hero-trust-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
            No Signup Required
          </span>
          <span class="hero-trust-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
            Instant Results
          </span>
        </div>
      </div>

    </div>
  </section>

  <style>
    .hero-clean {
      background: linear-gradient(135deg, var(--charcoal) 0%, #1a1f2e 100%);
      padding: var(--hero-padding-xl) 0;  /* XL Tier: 120px - Homepage only */
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    /* Mobile: Collapse to compact */
    @media (max-width: 768px) {
      .hero-clean {
        padding: var(--space-xl) 0;  /* 48px on mobile */
      }
    }

    /* Animated Chart Background */
    .hero-chart-bg {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 70%;
      pointer-events: none;
      opacity: 0;
      animation: fadeInChart 1.5s ease-out 0.3s forwards;
    }

    .hero-chart-svg {
      width: 100%;
      height: 100%;
    }

    .chart-line {
      stroke-dasharray: 2000;
      stroke-dashoffset: 2000;
      animation: drawLine 3s ease-out 0.5s forwards;
    }

    .chart-line-glow {
      stroke-dasharray: 2000;
      stroke-dashoffset: 2000;
      animation: drawLine 3s ease-out 0.5s forwards;
      filter: blur(4px);
    }

    .chart-area {
      opacity: 0;
      animation: fadeInArea 1s ease-out 2s forwards;
    }

    @keyframes fadeInChart {
      to { opacity: 1; }
    }

    @keyframes drawLine {
      to { stroke-dashoffset: 0; }
    }

    @keyframes fadeInArea {
      to { opacity: 1; }
    }

    /* Animated data points */
    .chart-point {
      opacity: 0;
      animation: pointFade 0.5s ease-in-out forwards;
    }

    .chart-point-glow {
      opacity: 0;
      animation: glowFade 0.8s ease-in-out forwards;
    }

    .p1, .pg1 { animation-delay: 0.95s; }
    .p2, .pg2 { animation-delay: 1.45s; }
    .p3, .pg3 { animation-delay: 1.95s; }
    .p4, .pg4 { animation-delay: 2.45s; }
    .p5, .pg5 { animation-delay: 2.95s; }

    @keyframes pointFade {
      0% { opacity: 0; }
      100% { opacity: 1; }
    }

    @keyframes glowFade {
      0% { opacity: 0; }
      100% { opacity: 0.35; }
    }

    .hero-content {
      max-width: 800px;
      margin: 0 auto;
      position: relative;
      z-index: 2;
    }

    /* Social Proof Badge */
    .hero-social-proof {
      margin-bottom: var(--space-lg);
    }

    .social-proof-badge {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: rgba(255, 72, 0, 0.15);
      border: 1px solid rgba(255, 72, 0, 0.3);
      color: var(--brand-orange);
      padding: 8px 16px;
      border-radius: var(--radius-full);
      font-size: var(--font-size-sm);
      font-weight: var(--font-weight-semibold);
    }

    .social-proof-dot {
      width: 8px;
      height: 8px;
      background: var(--success);
      border-radius: 50%;
      animation: pulse-dot 2s infinite;
    }

    @keyframes pulse-dot {
      0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7); }
      50% { opacity: 0.8; box-shadow: 0 0 0 6px rgba(16, 185, 129, 0); }
    }

    .hero-title {
      color: var(--white);
      font-size: clamp(2.5rem, 6vw, 4rem);
      font-weight: var(--font-weight-extrabold);
      line-height: 1.1;
      margin-bottom: var(--space-lg);
    }

    .hero-title-accent {
      color: var(--brand-orange);
    }

    .hero-subtitle {
      color: rgba(255, 255, 255, 0.8);
      font-size: var(--font-size-xl);
      line-height: 1.6;
      margin-bottom: var(--space-xl);
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .hero-cta-group {
      display: flex;
      gap: var(--space-md);
      justify-content: center;
      flex-wrap: wrap;
      margin-bottom: var(--space-lg);
    }

    .btn-arrow {
      transition: transform 0.2s ease;
    }

    .btn:hover .btn-arrow {
      transform: translateX(4px);
    }

    .btn-ghost {
      background: transparent;
      border: 2px solid rgba(255, 255, 255, 0.3);
      color: var(--white);
    }

    .btn-ghost:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.5);
    }

    /* Trust Row */
    .hero-trust-row {
      display: flex;
      justify-content: center;
      gap: var(--space-lg);
      flex-wrap: wrap;
    }

    .hero-trust-item {
      display: flex;
      align-items: center;
      gap: 6px;
      color: rgba(255, 255, 255, 0.7);
      font-size: var(--font-size-sm);
    }

    .hero-trust-item svg {
      color: var(--success);
    }

    @media (max-width: 768px) {
      .hero-trust-row {
        gap: var(--space-md);
      }
    }
  </style>

  <!-- TRUST BADGES - Authority -->
  <TrustBadges variant="light" showSecurityBadges={true} />

  <!-- SCARCITY BANNER - Sticky on scroll, snaps below nav -->
  <ScarcityCountdown
    variant="banner"
    message="January Exclusive: Top-tier welcome bonus"
    ctaText="Claim Your Bonus"
    ctaHref="/compare/"
  />

  <!-- BENTO GRID - What You Get (Premium Editorial Design) -->
  <section class="section bento-section">
    <div class="bento-bg-pattern"></div>
    <div class="container">
      <div class="section-header">
        <span class="section-eyebrow">Everything Included</span>
        <h2 class="heading-2">What You Get <span class="text-gradient">(100% Free)</span></h2>
        <p class="body-large">We've done the research so you don't have to</p>
      </div>

      <div class="bento-grid">
        <!-- AI Broker Matcher - Hero Card -->
        <a href="/find-broker/" class="bento-card bento-hero">
          <div class="bento-hero-bg">
            <svg class="hero-chart" viewBox="0 0 400 200" preserveAspectRatio="none">
              <defs>
                <linearGradient id="heroChartGrad" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" stop-color="rgba(255,72,0,0.3)"/>
                  <stop offset="100%" stop-color="rgba(255,72,0,0)"/>
                </linearGradient>
              </defs>
              <path d="M0,180 Q50,160 100,140 T200,100 T300,60 T400,30 L400,200 L0,200 Z" fill="url(#heroChartGrad)"/>
              <path d="M0,180 Q50,160 100,140 T200,100 T300,60 T400,30" fill="none" stroke="rgba(255,72,0,0.5)" stroke-width="2"/>
            </svg>
            <div class="hero-glow hero-glow-1"></div>
            <div class="hero-glow hero-glow-2"></div>
          </div>
          <div class="bento-badge">
            <span class="badge-dot"></span>
            Most Popular
          </div>
          <div class="bento-hero-content">
            <div class="bento-hero-icon">
              <div class="icon-rings">
                <div class="icon-ring ring-1"></div>
                <div class="icon-ring ring-2"></div>
                <div class="icon-ring ring-3"></div>
              </div>
              <div class="icon-center">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="3"/>
                  <path d="M12 2v4m0 12v4M2 12h4m12 0h4"/>
                  <path d="m4.93 4.93 2.83 2.83m8.48 8.48 2.83 2.83m0-14.14-2.83 2.83m-8.48 8.48-2.83 2.83"/>
                </svg>
              </div>
            </div>
            <div class="bento-hero-text">
              <span class="hero-label">AI-Powered</span>
              <h3 class="bento-title">Broker Matcher</h3>
              <p class="bento-desc">Answer 5 quick questions. Get matched with the perfect broker for your trading style, experience, and goals.</p>
            </div>
          </div>
          <div class="bento-hero-footer">
            <div class="hero-stats">
              <div class="hero-stat">
                <span class="stat-value">30s</span>
                <span class="stat-label">Quiz Time</span>
              </div>
              <div class="stat-divider"></div>
              <div class="hero-stat">
                <span class="stat-value">12,847</span>
                <span class="stat-label">Matched</span>
              </div>
              <div class="stat-divider"></div>
              <div class="hero-stat">
                <span class="stat-value">Free</span>
                <span class="stat-label">Always</span>
              </div>
            </div>
            <span class="bento-cta-btn">
              Find My Perfect Broker
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <path d="M5 12h14m-7-7 7 7-7 7"/>
              </svg>
            </span>
          </div>
        </a>

        <!-- Broker Reviews -->
        <a href="/brokers/" class="bento-card bento-feature">
          <div class="feature-visual">
            <div class="visual-bars">
              <div class="bar bar-1"></div>
              <div class="bar bar-2"></div>
              <div class="bar bar-3"></div>
              <div class="bar bar-4"></div>
            </div>
          </div>
          <div class="feature-content">
            <span class="feature-number">01</span>
            <h3 class="bento-title">Honest Reviews</h3>
            <p class="bento-desc">Real fee analysis, platform deep-dives, and verified user experiences across 17+ brokers.</p>
            <span class="bento-cta">Explore Reviews <span class="arrow">‚Üí</span></span>
          </div>
        </a>

        <!-- Partner Codes -->
        <a href="/bonus-codes/" class="bento-card bento-feature bento-bonus">
          <div class="bonus-amount">
            <span class="amount-up">Up to</span>
            <span class="amount-value">$10K</span>
            <span class="amount-label">in bonuses</span>
          </div>
          <div class="feature-content">
            <span class="feature-number">02</span>
            <h3 class="bento-title">Exclusive Codes</h3>
            <p class="bento-desc">Partner bonuses you won't find anywhere else. Better than signing up direct.</p>
            <span class="bento-cta">Claim Your Bonus <span class="arrow">‚Üí</span></span>
          </div>
        </a>

        <!-- Trading Guides -->
        <a href="/guides/" class="bento-card bento-feature">
          <div class="feature-visual">
            <div class="visual-book">
              <div class="book-page page-1"></div>
              <div class="book-page page-2"></div>
              <div class="book-page page-3"></div>
            </div>
          </div>
          <div class="feature-content">
            <span class="feature-number">03</span>
            <h3 class="bento-title">Trading Guides</h3>
            <p class="bento-desc">From beginner basics to advanced strategies. Learn before you trade.</p>
            <span class="bento-cta">Start Learning <span class="arrow">‚Üí</span></span>
          </div>
        </a>

        <!-- Markets Card -->
        <a href="/trade/" class="bento-card bento-markets">
          <div class="markets-header">
            <span class="markets-count">1,000+</span>
            <span class="markets-label">Markets</span>
          </div>
          <div class="markets-visual">
            <div class="market-orb orb-forex">
              <span>FX</span>
            </div>
            <div class="market-orb orb-crypto">
              <span>‚Çø</span>
            </div>
            <div class="market-orb orb-indices">
              <span>IDX</span>
            </div>
            <div class="market-orb orb-commodities">
              <span>CMD</span>
            </div>
          </div>
          <span class="bento-cta">Explore Markets <span class="arrow">‚Üí</span></span>
        </a>
      </div>
    </div>
  </section>

  <style>
    .bento-section {
      background: linear-gradient(180deg, var(--white) 0%, var(--gray-50) 100%);
      position: relative;
      overflow: hidden;
    }

    .bento-bg-pattern {
      position: absolute;
      inset: 0;
      background-image:
        radial-gradient(circle at 20% 50%, rgba(255, 72, 0, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(6, 147, 227, 0.03) 0%, transparent 50%);
      pointer-events: none;
    }

    .section-header {
      text-align: center;
      margin-bottom: var(--space-2xl);
      position: relative;
    }

    .section-eyebrow {
      display: inline-block;
      font-size: 11px;
      font-weight: var(--font-weight-bold);
      text-transform: uppercase;
      letter-spacing: 3px;
      color: var(--brand-orange);
      margin-bottom: var(--space-sm);
    }

    .section-header h2 {
      margin-bottom: var(--space-sm);
    }

    .text-gradient {
      background: linear-gradient(135deg, var(--brand-orange) 0%, #ff6b35 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .section-header p {
      color: var(--gray-600);
    }

    /* === BENTO GRID === */
    .bento-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    @media (min-width: 768px) {
      .bento-grid {
        grid-template-columns: repeat(2, 1fr);
      }
      .bento-hero { grid-column: span 2; }
    }

    @media (min-width: 1024px) {
      .bento-grid {
        grid-template-columns: repeat(12, 1fr);
        grid-template-rows: auto auto;
        gap: var(--space-lg);
      }
      .bento-hero { grid-column: span 7; grid-row: span 2; }
      .bento-feature:nth-of-type(2) { grid-column: span 5; }
      .bento-bonus { grid-column: span 5; }
      .bento-feature:nth-of-type(4) { grid-column: span 5; }
      .bento-markets { grid-column: span 7; }
    }

    /* === BASE CARD === */
    .bento-card {
      background: var(--white);
      border: 1px solid var(--gray-200);
      border-radius: var(--radius-2xl);
      text-decoration: none;
      color: inherit;
      transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
      display: flex;
      flex-direction: column;
      position: relative;
      overflow: hidden;
    }

    .bento-card:hover {
      border-color: rgba(255, 72, 0, 0.4);
      box-shadow:
        0 4px 6px rgba(0, 0, 0, 0.02),
        0 12px 24px rgba(0, 0, 0, 0.04),
        0 24px 48px rgba(0, 0, 0, 0.06);
      transform: translateY(-6px);
    }

    .bento-card:hover .arrow {
      transform: translateX(5px);
    }

    /* === HERO CARD === */
    .bento-hero {
      background: linear-gradient(145deg, #0f1419 0%, #1a1f2e 50%, #0f1419 100%);
      border: 1px solid rgba(255, 72, 0, 0.2);
      padding: var(--space-xl);
      min-height: 380px;
    }

    .bento-hero:hover {
      border-color: rgba(255, 72, 0, 0.5);
    }

    .bento-hero-bg {
      position: absolute;
      inset: 0;
      pointer-events: none;
      overflow: hidden;
    }

    .hero-chart {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 60%;
      opacity: 0.6;
    }

    .hero-glow {
      position: absolute;
      border-radius: 50%;
      filter: blur(60px);
    }

    .hero-glow-1 {
      width: 300px;
      height: 300px;
      background: rgba(255, 72, 0, 0.15);
      top: -100px;
      right: -50px;
    }

    .hero-glow-2 {
      width: 200px;
      height: 200px;
      background: rgba(6, 147, 227, 0.1);
      bottom: -50px;
      left: -50px;
    }

    .bento-badge {
      position: absolute;
      top: var(--space-lg);
      right: var(--space-lg);
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: rgba(255, 72, 0, 0.15);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 72, 0, 0.3);
      color: var(--brand-orange);
      padding: 8px 14px;
      border-radius: var(--radius-full);
      font-size: 11px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      z-index: 2;
    }

    .badge-dot {
      width: 6px;
      height: 6px;
      background: var(--brand-orange);
      border-radius: 50%;
      animation: pulse-badge 2s infinite;
    }

    @keyframes pulse-badge {
      0%, 100% { opacity: 1; transform: scale(1); }
      50% { opacity: 0.5; transform: scale(1.2); }
    }

    .bento-hero-content {
      display: flex;
      gap: var(--space-xl);
      align-items: flex-start;
      position: relative;
      z-index: 1;
      flex: 1;
    }

    @media (max-width: 768px) {
