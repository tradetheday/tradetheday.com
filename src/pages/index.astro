    /* ===== HERO (Dark) ===== */
    .hp-hero {
      position: relative;
      background: linear-gradient(145deg, var(--stone-900) 0%, #1a1f2e 50%, var(--stone-900) 100%);
      padding: 80px 0 96px;
      overflow: hidden;
    }

    .hp-hero-chart {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 200px;
      pointer-events: none;
    }

    .hp-chart-svg {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    /* Chart climbing animation */
    .hp-chart-line {
      stroke-dasharray: 2000;
      stroke-dashoffset: 2000;
      animation: chart-climb 2.5s ease-out forwards;
    }

    .hp-chart-fill {
      opacity: 0;
      animation: chart-fill-fade 1s ease-out 1.5s forwards;
    }

    @keyframes chart-climb {
      to {
        stroke-dashoffset: 0;
      }
    }

    @keyframes chart-fill-fade {
      to {
        opacity: 1;
      }
    }

    /* Data points - positioned outside SVG to prevent distortion */
    .hp-chart-points {
      position: absolute;
      inset: 0;
      pointer-events: none;
    }

    .hp-chart-point {
      position: absolute;
      transform: translate(-50%, 0);
      display: flex;
      flex-direction: column;
      align-items: center;
      opacity: 0;
      animation: point-fade-in 0.5s ease-out forwards;
    }

    .hp-chart-point:nth-child(1) { animation-delay: 0.6s; }
    .hp-chart-point:nth-child(2) { animation-delay: 1.2s; }
    .hp-chart-point:nth-child(3) { animation-delay: 1.8s; }
    .hp-chart-point:nth-child(4) { animation-delay: 2.4s; }

    @keyframes point-fade-in {
      to {
        opacity: 1;
      }
    }

    .hp-chart-dot {
      width: 10px;
      height: 10px;
      background: #EA580C;
      border-radius: 50%;
      box-shadow: 0 0 10px rgba(234, 88, 12, 0.6);
