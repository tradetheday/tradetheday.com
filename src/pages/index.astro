---
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import { brokers } from '../data/brokers';

const pageTitle = "Best Forex Brokers 2026: Compare Spreads, Fees & Bonuses";
const pageDescription = "Compare 15+ regulated forex brokers side-by-side. Real spreads tested, exclusive bonuses up to $10,000, and honest reviews. Find your perfect broker →";

// Featured brokers for the cards section
const featuredBrokerIds = ['avatrade', 'etoro', 'pepperstone', 'ic-markets', 'axi', 'plus500'];
const featuredBrokers = featuredBrokerIds
  .map(id => brokers.find(b => b.id === id))
  .filter(Boolean);
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  ogType="website"
>

  <!-- HERO SECTION (Dark with chart) -->
  <section class="hp-hero">
    <!-- Climbing chart background -->
    <div class="hp-hero-chart">
      <svg viewBox="0 0 1440 320" preserveAspectRatio="none" class="hp-chart-svg">
        <defs>
          <linearGradient id="chartLine" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="rgba(234,88,12,0.2)"/>
            <stop offset="100%" stop-color="rgba(234,88,12,0.8)"/>
          </linearGradient>
          <linearGradient id="chartFill" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" stop-color="rgba(234,88,12,0.15)"/>
            <stop offset="100%" stop-color="rgba(234,88,12,0)"/>
          </linearGradient>
        </defs>
        <!-- Grid lines -->
        <g stroke="rgba(255,255,255,0.03)" stroke-width="1">
          <line x1="0" y1="80" x2="1440" y2="80"/>
          <line x1="0" y1="160" x2="1440" y2="160"/>
          <line x1="0" y1="240" x2="1440" y2="240"/>
        </g>
        <!-- Chart area fill (animated) -->
        <path class="hp-chart-fill" d="M0,280 C120,270 200,260 360,240 C520,220 600,230 720,200 C840,170 920,180 1080,140 C1200,110 1280,120 1440,80 L1440,320 L0,320 Z" fill="url(#chartFill)"/>
        <!-- Chart line (animated) -->
        <path class="hp-chart-line" d="M0,280 C120,270 200,260 360,240 C520,220 600,230 720,200 C840,170 920,180 1080,140 C1200,110 1280,120 1440,80" fill="none" stroke="url(#chartLine)" stroke-width="2" stroke-linecap="round"/>
      </svg>
      <!-- Data points (separate so they don't distort) -->
      <div class="hp-chart-points">
        <div class="hp-chart-point" style="left: 25%; bottom: 24%;">
          <span class="hp-chart-label">+2.4%</span>
          <span class="hp-chart-line-v"></span>
          <span class="hp-chart-dot"></span>
        </div>
        <div class="hp-chart-point" style="left: 50%; bottom: 36%;">
          <span class="hp-chart-label">+5.1%</span>
          <span class="hp-chart-line-v"></span>
          <span class="hp-chart-dot"></span>
        </div>
        <div class="hp-chart-point" style="left: 75%; bottom: 55%;">
          <span class="hp-chart-label">+8.7%</span>
          <span class="hp-chart-line-v"></span>
          <span class="hp-chart-dot"></span>
        </div>
        <div class="hp-chart-point" style="left: 92%; bottom: 66%;">
          <span class="hp-chart-label hp-chart-label--profit">Take Profit</span>
          <span class="hp-chart-line-v"></span>
          <span class="hp-chart-dot"></span>
        </div>
      </div>
    </div>

    <div class="container hp-hero-inner">
      <!-- Trust bar -->
      <div class="hp-trust-bar">
        <div class="hp-avatars">
          <span class="hp-avatar hp-avatar-1"></span>
          <span class="hp-avatar hp-avatar-2"></span>
          <span class="hp-avatar hp-avatar-3"></span>
        </div>
        <span class="hp-trust-text">
          Trusted by <strong>12,847+</strong> traders this month
        </span>
      </div>

      <!-- Headline -->
      <div class="hp-hero-content">
        <h1 class="hp-h1">
          Choose the Right Broker.<br>
          <span class="hp-accent">Avoid Costly Mistakes.</span><br>
          Trade the Day.
        </h1>

        <p class="hp-subhead">
          Expert broker reviews, step-by-step trading guides, and AI-powered matching — all in one place.
        </p>

        <!-- CTAs -->
        <div class="hp-cta-group">
          <a href="/find-broker" class="hp-btn-primary">
            <span class="hp-btn-text-full">Find My Perfect Broker</span>
            <span class="hp-btn-text-short">Find Broker</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14m-7-7 7 7-7 7"/></svg>
          </a>
          <a href="/brokers" class="hp-btn-secondary hp-btn-secondary--dark">
            <span class="hp-btn-text-full">Compare All Brokers</span>
            <span class="hp-btn-text-short">Compare</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- TRUST BAR SECTION -->
  <section class="hp-trustbar-section">
    <div class="container">
      <div class="hp-trust-chips">
        <span class="hp-chip-label">Brokers Regulated By:</span>
        <div class="hp-chips-row">
          <span class="hp-chip"><svg width="12" height="12" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg> FCA</span>
          <span class="hp-chip"><svg width="12" height="12" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg> ASIC</span>
          <span class="hp-chip"><svg width="12" height="12" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg> CySEC</span>
          <span class="hp-chip"><svg width="12" height="12" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg> FSCA</span>
          <span class="hp-chip-divider"></span>
          <span class="hp-chip hp-chip--secure"><svg width="12" height="12" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/></svg> 256-bit SSL</span>
          <span class="hp-chip hp-chip--secure"><svg width="12" height="12" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg> Verified Reviews</span>
          <span class="hp-chip hp-chip--secure"><svg width="12" height="12" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg> Independent</span>
        </div>
      </div>
    </div>
  </section>

  <!-- BONUS BANNER SECTION -->
  <section class="hp-bonus-section">
    <div class="container">
      <a href="/deals" class="hp-bonus-banner">
        <span class="hp-bonus-icon">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor"><path d="M5 5a3 3 0 015-2.236A3 3 0 0114.83 6H16a2 2 0 110 4h-5V9a1 1 0 10-2 0v1H4a2 2 0 110-4h1.17C5.06 5.687 5 5.35 5 5zm4 1V5a1 1 0 10-1 1h1zm3 0a1 1 0 10-1-1v1h1z"/><path d="M9 11H3v5a2 2 0 002 2h4v-7zM11 18h4a2 2 0 002-2v-5h-6v7z"/></svg>
        </span>
        <span class="hp-bonus-text">
          <strong>Exclusive Broker Bonuses</strong>
          <span>Transparent & verified offers</span>
        </span>
        <span class="hp-bonus-arrow">
          View Bonuses
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 5l7 7-7 7"/></svg>
        </span>
      </a>
    </div>
  </section>

  <!-- WHAT YOU GET SECTION -->
  <section class="hp-features">
    <div class="container">
      <div class="hp-section-header">
        <span class="hp-section-label">Everything Included</span>
        <h2>What You Get <span class="hp-accent">(100% Free)</span></h2>
        <p>We've done the research so you don't have to.</p>
      </div>

      <!-- Row 1: Broker Matcher (2/3) + Honest Reviews (1/3) -->
      <div class="hp-bento-row hp-bento-row--top">
        <!-- Broker Matcher (dark featured card) -->
        <div class="hp-bento-featured">
          <div class="hp-bento-featured-header">
            <div class="hp-bento-icon-circle">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="10" rx="2"/><circle cx="12" cy="5" r="2"/><path d="M12 7v4"/><line x1="8" y1="16" x2="8" y2="16"/><line x1="16" y1="16" x2="16" y2="16"/><path d="M9 20v1M15 20v1"/></svg>
            </div>
            <div>
              <span class="hp-bento-label">AI Powered</span>
              <h3>Broker Matcher</h3>
            </div>
          </div>
          <p class="hp-bento-featured-desc">Answer 5 quick questions. Get matched with the perfect broker for your trading style, experience, and goals.</p>
          <div class="hp-bento-featured-footer">
            <div class="hp-bento-stats">
              <div class="hp-bento-stat">
                <strong>30s</strong>
                <span>Quiz</span>
              </div>
              <div class="hp-bento-stat">
                <strong>12,847</strong>
                <span>Matched</span>
              </div>
              <div class="hp-bento-stat">
                <strong>Free</strong>
                <span>Always</span>
              </div>
            </div>
            <a href="/find-broker" class="hp-bento-cta">
              Find My Perfect Broker
            </a>
          </div>
        </div>

        <!-- Honest Reviews -->
        <div class="hp-bento-card">
          <div class="hp-bento-card-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 3v18h18"/><path d="M18 9l-5 5-4-4-3 3"/>
            </svg>
          </div>
          <h3>Honest Reviews</h3>
          <p>Real fee analysis, platform deep-dives, and verified user experiences across 17+ brokers.</p>
          <a href="/brokers" class="hp-bento-link">
            Explore Reviews
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14m-7-7 7 7-7 7"/></svg>
          </a>
        </div>
      </div>

      <!-- Row 2: Three equal cards -->
      <div class="hp-bento-row hp-bento-row--bottom">
        <!-- Trading Guides -->
        <div class="hp-bento-card">
          <div class="hp-bento-card-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
          </div>
          <h3>Trading Guides</h3>
          <p>From beginner basics to advanced strategies. Learn before you trade.</p>
          <a href="/guides" class="hp-bento-link">
            Start Learning
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14m-7-7 7 7-7 7"/></svg>
          </a>
        </div>

        <!-- Exclusive Bonuses -->
        <div class="hp-bento-card">
          <div class="hp-bento-card-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/></svg>
          </div>
          <h3>Exclusive Bonuses</h3>
          <p>Partner bonuses you won't find anywhere else. Better than signing up direct.</p>
          <a href="/deals" class="hp-bento-link">
            View Bonuses
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14m-7-7 7 7-7 7"/></svg>
          </a>
        </div>

        <!-- Markets We Cover -->
        <div class="hp-bento-card">
          <div class="hp-bento-card-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4z"/><path d="M8 14v3M12 14v3M16 14v3"/></svg>
          </div>
          <h3>Markets We Cover</h3>
          <p>Access 1,000+ markets including FX, Crypto, Indices, and Commodities.</p>
          <a href="/instruments" class="hp-bento-link">
            Explore Markets
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14m-7-7 7 7-7 7"/></svg>
          </a>
        </div>
      </div>

    </div>
  </section>

  <!-- FEATURED BROKERS -->
  <section class="hp-brokers">
    <div class="container">
      <div class="hp-section-header">
        <h2>Featured Brokers</h2>
        <p>Trusted, regulated brokers with exclusive TradeTheDay bonuses</p>
      </div>

      <div class="hp-broker-grid">
        {featuredBrokers.map((broker) => (
          <div class={`hp-broker-card ${broker.promoted ? 'hp-broker-card--featured' : ''}`}>
            {broker.promoted && <span class="hp-broker-badge">Most Popular</span>}

            <!-- Header -->
            <div class="hp-broker-header">
              <div class="hp-broker-logo-wrap">
                {broker.logo ? (
                  <img src={broker.logo} alt={broker.name} class="hp-broker-logo" width="140" height="40" loading="lazy">
                ) : (
                  <span class="hp-broker-name-text">{broker.name}</span>
                )}
              </div>
              <div class="hp-broker-rating">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="#EA580C"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                <strong>{broker.scores.overall}</strong>
                <span>/10</span>
              </div>
            </div>

            <!-- Stats -->
            <div class="hp-broker-stats">
              <div class="hp-broker-stat">
                <span class="hp-broker-stat-label">Min Deposit</span>
                <span class="hp-broker-stat-value">{broker.minDepositDisplay}</span>
              </div>
              <div class="hp-broker-stat">
                <span class="hp-broker-stat-label">Spreads</span>
                <span class="hp-broker-stat-value">{broker.spreadsFrom}</span>
              </div>
              <div class="hp-broker-stat">
                <span class="hp-broker-stat-label">Instruments</span>
                <span class="hp-broker-stat-value">{broker.instrumentsDisplay}</span>
              </div>
            </div>

            <!-- Badges -->
            <div class="hp-broker-badges">
              {broker.regulations.slice(0, 2).map((reg) => (
                <span class="hp-reg-badge">
                  <svg width="12" height="12" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                  {reg.authority}
                </span>
              ))}
              {broker.partnerCode && (
                <span class="hp-bonus-badge-sm">
                  <svg width="12" height="12" viewBox="0 0 20 20" fill="currentColor"><path d="M5 5a3 3 0 015-2.236A3 3 0 0114.83 6H16a2 2 0 110 4h-5V9a1 1 0 10-2 0v1H4a2 2 0 110-4h1.17C5.06 5.687 5 5.35 5 5zm4 1V5a1 1 0 10-1 1h1zm3 0a1 1 0 10-1-1v1h1z"/></svg>
                  Bonus
                </span>
              )}
            </div>

            <!-- CTAs -->
            <div class="hp-broker-ctas">
              <a href={broker.reviewUrl} class="hp-broker-btn-review">Full Review</a>
              <a href={broker.affiliateUrl} class="hp-broker-btn-open" target="_blank" rel="noopener sponsored">Open Account</a>
            </div>
          </div>
        ))}
      </div>

      <div class="hp-section-cta">
        <a href="/brokers" class="hp-btn-secondary">
          Compare All Brokers
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 5l7 7-7 7"/></svg>
        </a>
        <p class="hp-section-cta-links">
          <a href="/exchanges">Exchanges</a> | <a href="/propfirms">Prop Firms</a>
        </p>
      </div>

      <!-- Popular Comparisons -->
      <div class="hp-popular-links">
        <p class="hp-popular-label">Popular Comparisons & Resources</p>
        <div class="hp-popular-grid">
          <a href="/brokers/avatrade/partner-code" class="hp-popular-link hp-popular-link--featured">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.59 13.41l-7.17 7.17a2 2 0 01-2.83 0L2 12V2h10l8.59 8.59a2 2 0 010 2.82z"/><line x1="7" y1="7" x2="7.01" y2="7"/></svg>
            AvaTrade Partner Code
          </a>
          <a href="/compare/avatrade-vs-etoro" class="hp-popular-link">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 5l7 7-7 7"/></svg>
            AvaTrade vs eToro
          </a>
          <a href="/compare/pepperstone-vs-ic-markets" class="hp-popular-link">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 5l7 7-7 7"/></svg>
            Pepperstone vs IC
          </a>
          <a href="/crypto/trump" class="hp-popular-link hp-popular-link--trending">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>
            $TRUMP Coin
          </a>
          <a href="/propfirms" class="hp-popular-link">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 5l7 7-7 7"/></svg>
            Prop Firm Reviews
          </a>
          <a href="/deals" class="hp-popular-link hp-popular-link--featured">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.59 13.41l-7.17 7.17a2 2 0 01-2.83 0L2 12V2h10l8.59 8.59a2 2 0 010 2.82z"/><line x1="7" y1="7" x2="7.01" y2="7"/></svg>
            Bonus Codes $50k+
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- TRUST / SECURITY -->
  <section class="hp-trust">
    <div class="container">
      <div class="hp-trust-inner">
        <div class="hp-trust-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
        </div>
        <h2>Your Funds Are Kept Safe and Secure</h2>
        <p>Trade with confidence. Every broker on TradeTheDay is regulated by Tier-1 authorities and vetted for security, ensuring partnerships with top global banks.</p>
