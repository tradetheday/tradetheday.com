---
/**
 * Find Your Broker - Broker Selector Quiz
 *
 * Design Philosophy: Jony Ive Principles
 * - Simplicity is the ultimate sophistication
 * - Let the content breathe
 * - Confidence doesn't need to shout
 * - Every element earns its place
 *
 * This page is focused on the quiz experience.
 * For SEO content, see /guides/how-to-find-broker
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import BrokerSelectorQuiz from '../../components/BrokerSelectorQuiz.astro';
import FAQ from '../../components/FAQ.astro';
import { generateFAQSchema, generateWebApplicationSchema, generateBreadcrumbSchema } from '../../utils/seo';
import { brokerFinderFAQsFull } from '../../data/faqs';

// Page metadata
const title = 'Find Your Perfect Broker | AI-Powered Quiz (30 Seconds)';
const description = 'Answer 5 questions and get matched with the best broker for your trading style. No signup required. See personalized recommendations in 30 seconds.';

// Breadcrumb data
const breadcrumbItems = [
  { text: 'Home', href: '/' },
  { text: 'Find Your Broker', current: true }
];

const breadcrumbSchemaItems = [
  { name: 'Home', url: '/' },
  { name: 'Find Your Broker', url: '/find-broker' }
];

// FAQ data from centralized source
const faqItems = brokerFinderFAQsFull;

// Schemas
const webAppSchema = generateWebApplicationSchema({
  name: 'TradeTheDay Broker Selector',
  description: 'AI-powered broker comparison tool that matches traders with the best brokers for their needs',
  url: 'https://tradetheday.com/find-broker',
  applicationCategory: 'FinanceApplication'
});

const faqSchema = generateFAQSchema(faqItems);
const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbSchemaItems);

// Service schema for the broker finder tool
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Broker Finder Tool",
  "alternateName": "Find a Broker Quiz",
  "description": "Free AI-powered tool to find the best trading broker based on your experience level, trading style, and preferences",
  "provider": {
    "@type": "Organization",
    "name": "TradeTheDay",
    "url": "https://tradetheday.com"
  },
  "serviceType": "Broker Comparison Tool",
  "areaServed": {
    "@type": "Place",
    "name": "Worldwide"
  },
  "availableChannel": {
    "@type": "ServiceChannel",
    "serviceUrl": "https://tradetheday.com/find-broker",
    "serviceType": "Online"
  },
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock"
  },
  "termsOfService": "https://tradetheday.com/terms"
};

// Aggregate rating schema (social proof)
const aggregateSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "TradeTheDay Broker Selector",
  "description": "AI-powered broker matching quiz that recommends the best trading brokers based on your needs",
  "brand": {
    "@type": "Brand",
    "name": "TradeTheDay"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "bestRating": "5",
    "worstRating": "1",
    "ratingCount": "1247"
  }
};
---

<BaseLayout
  title={title}
  description={description}
  ogType="website"
  schema={[
    webAppSchema,
    faqSchema,
    breadcrumbSchema,
    serviceSchema,
    aggregateSchema
  ]}
>
  <Fragment slot="breadcrumb">
    <Breadcrumb items={breadcrumbItems} />
  </Fragment>

  <!-- HERO SECTION -->
  <section class="fb-hero" aria-labelledby="page-title">
    <div class="fb-hero-bg"></div>
    <div class="container">
      <div class="fb-hero-content">
        <!-- Badge -->
        <div class="fb-badge">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
            <rect x="3" y="11" width="18" height="10" rx="2"/>
            <circle cx="12" cy="5" r="2"/>
            <path d="M12 7v4"/>
          </svg>
          <span>AI-Powered Matching</span>
        </div>

        <h1 class="fb-title" id="page-title">Find Your Perfect Broker</h1>

        <p class="fb-subtitle">
          Answer 5 simple questions. Get matched with brokers that fit your trading style, experience, and goals.
        </p>

        <!-- Stats Row -->
        <div class="fb-stats">
          <div class="fb-stat">
            <span class="fb-stat-value">15+</span>
            <span class="fb-stat-label">Verified Brokers</span>
          </div>
          <div class="fb-stat">
            <span class="fb-stat-value">30s</span>
            <span class="fb-stat-label">To Complete</span>
          </div>
          <div class="fb-stat">
            <span class="fb-stat-value">Free</span>
            <span class="fb-stat-label">No Signup</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- QUIZ SECTION -->
  <section class="fb-quiz" id="quiz">
    <div class="container">
      <div class="fb-quiz-wrapper">
        <BrokerSelectorQuiz variant="full" />
      </div>
    </div>
  </section>

  <!-- AI CHAT SECTION -->
  <section class="fb-chat" id="chat">
    <div class="container">
      <div class="fb-section-header">
        <h2>Or Chat With Our AI</h2>
        <p class="fb-chat-subtitle">Prefer a conversation? Ask our AI advisor anything about finding a broker.</p>
      </div>
      <div class="fb-chat-wrapper">
        <iframe
          src="https://dashboard.tinytalk.ai/bots/77d3e518-de33-4852-802b-0a05af5c4384/chat"
          width="100%"
          height="660"
          frameborder="0"
          title="AI Broker Advisor Chat"
          loading="lazy"
          tabindex="-1"
        ></iframe>
      </div>
    </div>
  </section>

  <!-- WHY TRUST SECTION -->
  <section class="fb-trust">
    <div class="container">
      <div class="fb-trust-content">
        <h2>Why Trust This Quiz?</h2>
        <div class="fb-trust-points">
          <div class="fb-trust-point">
            <div class="fb-trust-point-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <div>
              <strong>Regulated brokers only</strong>
              <span>Every broker is licensed by FCA, ASIC, CySEC, or equivalent tier-1 authorities</span>
            </div>
          </div>
          <div class="fb-trust-point">
            <div class="fb-trust-point-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 3v18h18"/><path d="M18 9l-5 5-4-4-3 3"/>
              </svg>
            </div>
            <div>
              <strong>Unbiased matching</strong>
              <span>Algorithm based on objective criteria - fees, features, regulation, user feedback</span>
            </div>
          </div>
          <div class="fb-trust-point">
            <div class="fb-trust-point-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/>
              </svg>
            </div>
            <div>
              <strong>Personalized results</strong>
              <span>Matches based on your experience, trading style, budget, and priorities</span>
            </div>
          </div>

        </div>

        <!-- Algorithm Explainer (Collapsible - full width) -->
        <details class="fb-algorithm-expandable">
          <summary class="fb-algorithm-header">
            <div class="fb-algorithm-header-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75">
                <path d="M9.5 2A2.5 2.5 0 0 1 12 4.5v15a2.5 2.5 0 0 1-4.96.44 2.5 2.5 0 0 1-2.96-3.08 3 3 0 0 1-.34-5.58 2.5 2.5 0 0 1 1.32-4.24 2.5 2.5 0 0 1 1.98-3A2.5 2.5 0 0 1 9.5 2Z"/>
                <path d="M14.5 2A2.5 2.5 0 0 0 12 4.5v15a2.5 2.5 0 0 0 4.96.44 2.5 2.5 0 0 0 2.96-3.08 3 3 0 0 0 .34-5.58 2.5 2.5 0 0 0-1.32-4.24 2.5 2.5 0 0 0-1.98-3A2.5 2.5 0 0 0 14.5 2Z"/>
              </svg>
            </div>
            <div class="fb-algorithm-header-text">
              <strong>AI-powered matching algorithm</strong>
              <span>12+ weighted factors analyzed per broker to find your perfect match</span>
            </div>
            <span class="fb-algorithm-header-chevron">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <polyline points="6 9 12 15 18 9"/>
              </svg>
            </span>
          </summary>
          <div class="fb-algorithm-body">
            <div class="fb-algorithm-grid">
              <div class="fb-algorithm-item">
                <h4>Multi-Factor Scoring</h4>
                <p>Each broker scored across regulation quality, fee structure, platforms, education, instruments, minimum deposit, leverage, support, and mobile experience.</p>
              </div>
              <div class="fb-algorithm-item">
                <h4>Experience Weighting</h4>
                <p>Beginners get weighted toward education and support. Advanced traders see fee efficiency and platform depth prioritized. Not one-size-fits-all.</p>
              </div>
              <div class="fb-algorithm-item">
                <h4>Style Compatibility</h4>
                <p>Scalpers need tight spreads and speed. Position traders need good swap rates. Your style changes which attributes matter most.</p>
              </div>
              <div class="fb-algorithm-item">
                <h4>Budget Optimization</h4>
                <p>A 0.5% fee difference impacts $500 accounts more than $50,000 ones. We optimize for value at your specific deposit level.</p>
              </div>
            </div>
            <p class="fb-algorithm-note">Every broker is regulated by a reputable authority. Our weights are based on testing and real user feedback. Affiliate commissions don't influence scores.</p>
          </div>
        </details>

        <a href="/guides/how-to-find-broker" class="fb-trust-link">
          Want to evaluate brokers yourself? Read our complete guide
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- FAQ SECTION -->
  <section class="fb-faq">
    <div class="container">
      <div class="fb-section-header">
        <h2>Frequently Asked Questions</h2>
      </div>
      <div class="fb-faq-wrapper">
        <FAQ questions={faqItems} title="" inline={true} />
      </div>
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="fb-final">
    <div class="container">
      <div class="fb-final-content">
        <h2>Ready to Find Your Broker?</h2>
        <p>Take our 30-second quiz and get personalized recommendations.</p>
        <a href="#quiz" class="fb-cta-final" onclick="document.getElementById('quiz').scrollIntoView({behavior: 'smooth'}); return false;">
          Start the Quiz
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <p class="fb-guide-link">
          Want to learn more first? <a href="/guides/how-to-find-broker">Read our broker guide</a>
        </p>
        <div class="fb-final-trust">
          <span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
            All Brokers Regulated
          </span>
          <span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
            No Signup Required
          </span>
          <span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
            100% Free
          </span>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
/* ==========================================================================
   FIND BROKER PAGE - Simplified Jony Ive Design
   Hero → Quiz → FAQ → CTA
   ========================================================================== */

/* HERO SECTION */
.fb-hero {
  position: relative;
  padding: 80px 0 64px;
  background: linear-gradient(145deg, #1C1917 0%, #292524 50%, #1C1917 100%);
  text-align: center;
  overflow: hidden;
}

.fb-hero-bg {
  position: absolute;
  inset: 0;
  background:
    radial-gradient(ellipse 60% 40% at 50% -10%, rgba(234, 88, 12, 0.12) 0%, transparent 50%),
    radial-gradient(ellipse 40% 30% at 80% 60%, rgba(234, 88, 12, 0.06) 0%, transparent 50%);
  pointer-events: none;
}

.fb-hero-content {
  position: relative;
  z-index: 1;
  max-width: 600px;
  margin: 0 auto;
}

.fb-badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: rgba(234, 88, 12, 0.12);
  border: 1px solid rgba(234, 88, 12, 0.25);
  padding: 8px 16px;
  border-radius: 50px;
  font-size: 13px;
  font-weight: 500;
  color: #fb923c;
  margin-bottom: 24px;
}

.fb-title {
  font-size: clamp(1.75rem, 5vw, 2.5rem);
  font-weight: 700;
  color: white;
  line-height: 1.2;
  margin-bottom: 16px;
  letter-spacing: -0.02em;
}

.fb-subtitle {
  font-size: 17px;
  color: rgba(255, 255, 255, 0.75);
  line-height: 1.6;
  margin-bottom: 32px;
}

.fb-stats {
  display: flex;
  justify-content: center;
  gap: 48px;
}

.fb-stat {
  text-align: center;
}

.fb-stat-value {
  display: block;
  font-size: 28px;
  font-weight: 800;
  color: #EA580C;
  margin-bottom: 4px;
}

.fb-stat-label {
  font-size: 13px;
  color: rgba(255, 255, 255, 0.6);
}

/* QUIZ SECTION */
.fb-quiz {
  padding: 48px 0 64px;
  background: #F5F5F4;
}

.fb-quiz-wrapper {
  max-width: 700px;
  margin: 0 auto;
  padding: 32px;
  background: white;
  border-radius: 16px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  border: 1px solid #E7E5E3;
}

/* SECTION HEADERS */
.fb-section-header {
  text-align: center;
  margin-bottom: 32px;
}

.fb-section-header h2 {
  font-size: clamp(1.25rem, 3vw, 1.5rem);
  font-weight: 700;
  color: #1C1917;
  margin: 0;
}

/* AI CHAT SECTION */
.fb-chat {
  padding: 64px 0;
  background: white;
}

.fb-chat-subtitle {
  font-size: 15px;
  color: #57534E;
  margin-top: 8px;
}

.fb-chat-wrapper {
  max-width: 700px;
  margin: 0 auto;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  border: 1px solid #E7E5E3;
}

.fb-chat-wrapper iframe {
  display: block;
  background: white;
}

/* WHY TRUST SECTION */
.fb-trust {
  padding: 64px 0;
  background: white;
}

.fb-trust-content {
  max-width: 700px;
  margin: 0 auto;
  text-align: center;
}

.fb-trust h2 {
  font-size: clamp(1.25rem, 3vw, 1.5rem);
  font-weight: 700;
  color: #1C1917;
  margin-bottom: 32px;
}

.fb-trust-points {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-bottom: 32px;
}

.fb-trust-point {
  display: flex;
  align-items: flex-start;
  gap: 16px;
  text-align: left;
  background: #FAFAF9;
  border: 1px solid #E7E5E3;
  border-radius: 12px;
  padding: 20px;
}

.fb-trust-point-icon {
  flex-shrink: 0;
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%);
  border: 1px solid #FED7AA;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #EA580C;
}

.fb-trust-point strong {
  display: block;
  font-size: 15px;
  font-weight: 600;
  color: #1C1917;
  margin-bottom: 4px;
}

.fb-trust-point span {
  font-size: 14px;
  color: #57534E;
  line-height: 1.5;
}

.fb-trust-link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  font-size: 15px;
  font-weight: 500;
  color: #EA580C;
  text-decoration: none;
  transition: all 0.2s ease;
}

.fb-trust-link:hover {
  color: #DC2626;
  gap: 12px;
}

/* FAQ SECTION */
.fb-faq {
  padding: 64px 0;
  background: #F5F5F4;
}

.fb-faq-wrapper {
  max-width: 700px;
  margin: 0 auto;
}

/* ALGORITHM EXPANDABLE SECTION */
.fb-algorithm-expandable {
  margin-top: 24px;
  margin-bottom: 32px;
  background: #FAFAF9;
  border: 1px solid #E7E5E3;
  border-radius: 12px;
  overflow: hidden;
}

.fb-algorithm-header {
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 18px 20px;
  cursor: pointer;
  list-style: none;
  transition: background 0.2s ease;
}

.fb-algorithm-header::-webkit-details-marker {
  display: none;
}

.fb-algorithm-header:hover {
  background: #F5F5F4;
}

.fb-algorithm-header-icon {
  flex-shrink: 0;
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%);
  border: 1px solid #FED7AA;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #EA580C;
}

.fb-algorithm-header-text {
  flex: 1;
  text-align: left;
}

.fb-algorithm-header-text strong {
  display: block;
  font-size: 15px;
  font-weight: 600;
  color: #1C1917;
  margin-bottom: 2px;
}

.fb-algorithm-header-text span {
  font-size: 13px;
  color: #57534E;
}

.fb-algorithm-header-chevron {
  flex-shrink: 0;
  color: #A8A29E;
  transition: transform 0.2s ease;
}

details[open] .fb-algorithm-header-chevron {
  transform: rotate(180deg);
}

.fb-algorithm-body {
  padding: 0 20px 20px;
}

.fb-algorithm-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
  margin-bottom: 16px;
}

.fb-algorithm-item {
  background: white;
  border: 1px solid #E7E5E3;
  border-radius: 10px;
  padding: 16px;
  text-align: left;
}

.fb-algorithm-item h4 {
  font-size: 13px;
  font-weight: 600;
  color: #1C1917;
  margin-bottom: 8px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.fb-algorithm-item h4::before {
  content: '';
  width: 6px;
  height: 6px;
  background: #EA580C;
  border-radius: 50%;
  flex-shrink: 0;
}

.fb-algorithm-item p {
  font-size: 13px;
  color: #57534E;
  line-height: 1.55;
  margin: 0;
}

.fb-algorithm-note {
  font-size: 13px;
  line-height: 1.55;
  margin: 0;
  padding: 14px 16px;
  background: #F0FDF4;
  border: 1px solid #BBF7D0;
  border-radius: 10px;
  color: #166534;
  text-align: left;
}

/* FINAL CTA */
.fb-final {
  padding: 64px 0;
  background: linear-gradient(145deg, #1C1917 0%, #0C0A09 100%);
  text-align: center;
}

.fb-final-content {
  max-width: 480px;
  margin: 0 auto;
}

.fb-final h2 {
  font-size: clamp(1.5rem, 4vw, 1.75rem);
  font-weight: 700;
  color: white;
  margin-bottom: 12px;
}

.fb-final > p,
.fb-final-content > p:first-of-type {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 24px;
}

.fb-cta-final {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 16px 32px;
  background: linear-gradient(135deg, #EA580C 0%, #DC2626 100%);
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  color: white;
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: 0 4px 24px rgba(234, 88, 12, 0.4);
  animation: cta-pulse 2.5s ease-in-out infinite;
  margin-bottom: 16px;
}

.fb-cta-final:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 32px rgba(234, 88, 12, 0.5);
}

@keyframes cta-pulse {
  0%, 100% { box-shadow: 0 4px 24px rgba(234, 88, 12, 0.4); }
  50% { box-shadow: 0 4px 24px rgba(234, 88, 12, 0.6), 0 0 0 8px rgba(234, 88, 12, 0.1); }
}

.fb-guide-link {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 24px;
}

.fb-guide-link a {
  color: #fb923c;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s ease;
}

.fb-guide-link a:hover {
  color: #EA580C;
  text-decoration: underline;
}

.fb-final-trust {
  display: flex;
  justify-content: center;
  gap: 24px;
  font-size: 13px;
  color: rgba(255, 255, 255, 0.6);
  flex-wrap: wrap;
}

.fb-final-trust span {
  display: flex;
  align-items: center;
  gap: 6px;
}

.fb-final-trust svg {
  color: #22c55e;
  flex-shrink: 0;
}

/* RESPONSIVE */
@media (max-width: 768px) {
  .fb-hero {
    padding: 56px 0 48px;
  }

  .fb-quiz,
  .fb-chat,
  .fb-trust,
  .fb-faq,
  .fb-final {
    padding: 48px 0;
  }

