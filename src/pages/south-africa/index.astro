            <div class="featured-rating">
              <span class="rating-score">{avatrade?.scores.overall}</span>
              <span class="rating-stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÜ</span>
            </div>
          </div>

          <div class="featured-stats">
            <div class="stat">
              <span class="stat-label">Min Deposit</span>
              <span class="stat-value">R1,800 (~$100)</span>
            </div>
            <div class="stat">
