---
interface Props {
  variant?: 'inline' | 'full' | 'minimal';
  headline?: string;
  subheadline?: string;
  buttonText?: string;
  leadMagnet?: string;
}

const {
  variant = 'inline',
  headline = 'Get Trading Insights Weekly',
  subheadline = 'Join 5,000+ traders receiving free market analysis, trading tips, and exclusive deals.',
  buttonText = 'Subscribe Free',
  leadMagnet = ''
} = Astro.props;
---

<div class={`newsletter-signup newsletter-${variant}`}>
  <h3 class="newsletter-headline">{headline}</h3>

  {(variant === 'full' || variant === 'inline') && (
    <p class="newsletter-subheadline">{subheadline}</p>
  )}

  {leadMagnet && (
    <div class="lead-magnet-preview">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
      <span class="lm-text">Plus get: <strong>{leadMagnet}</strong></span>
    </div>
  )}

  <form class="newsletter-form" data-newsletter-form>
    <div class="form-row">
      <input
        type="email"
        name="email"
        placeholder="Enter your email address"
        required
        class="newsletter-input"
      />
      <button type="submit" class="newsletter-button">
        <span class="btn-text">{buttonText}</span>
        <span class="btn-loading" style="display: none;">
          <svg class="spinner" viewBox="0 0 24 24" fill="none">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" opacity="0.3"/>
            <path d="M12 2a10 10 0 0 1 10 10" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
          </svg>
        </span>
      </button>
    </div>
    <p class="newsletter-privacy">No spam. Unsubscribe anytime.</p>
  </form>

  <div class="newsletter-success" style="display: none;" data-newsletter-success>
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
    <p class="success-text">Welcome aboard! Check your email to confirm.</p>
  </div>

  {variant === 'full' && (
    <div class="newsletter-features">
      <div class="nf-item">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 3v18h18"/><path d="M18 9l-5 5-4-4-3 3"/></svg>
        <span class="nf-text">Weekly Market Analysis</span>
      </div>
      <div class="nf-item">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
        <span class="nf-text">Pro Trading Tips</span>
      </div>
      <div class="nf-item">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/></svg>
        <span class="nf-text">Exclusive Broker Deals</span>
      </div>
    </div>
  )}
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const forms = document.querySelectorAll('[data-newsletter-form]');

    forms.forEach(form => {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const email = form.querySelector('input[name="email"]').value;
        const button = form.querySelector('.newsletter-button');
        const btnText = button.querySelector('.btn-text');
        const btnLoading = button.querySelector('.btn-loading');
        const successEl = form.parentElement.querySelector('[data-newsletter-success]');

        // Show loading state
        btnText.style.display = 'none';
        btnLoading.style.display = 'block';
        button.disabled = true;

        try {
          // Simulate delay for demo
          await new Promise(resolve => setTimeout(resolve, 1000));

          // Show success
          form.style.display = 'none';
          successEl.style.display = 'flex';

          // Track conversion
          if (typeof gtag !== 'undefined') {
            gtag('event', 'newsletter_signup', { email_domain: email.split('@')[1] });
          }
        } catch (error) {
          btnText.style.display = 'block';
          btnLoading.style.display = 'none';
          button.disabled = false;
          alert('Something went wrong. Please try again.');
        }
      });
    });
  });
</script>

<style>
  .newsletter-signup {
    position: relative;
  }

  /* Full Variant - Clean Jony Ive style */
  .newsletter-full {
    background: linear-gradient(180deg, #1C1917 0%, #0C0A09 100%);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 20px;
    padding: 56px 48px;
    text-align: center;
    max-width: 680px;
    margin: 0 auto;
  }

  /* Inline Variant */
  .newsletter-inline {
    background: #1C1917;
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 16px;
    padding: 32px;
  }

  /* Minimal Variant */
  .newsletter-minimal {
    padding: 16px 0;
  }

  .newsletter-minimal .newsletter-headline {
    font-size: 16px;
    margin-bottom: 12px;
  }

  .newsletter-headline {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    margin-bottom: 12px;
    color: #FAFAF9;
    letter-spacing: -0.02em;
  }

  .newsletter-subheadline {
    color: #A8A29E;
    font-size: 15px;
    line-height: 1.6;
    margin-bottom: 32px;
    max-width: 420px;
    margin-left: auto;
    margin-right: auto;
  }

  .lead-magnet-preview {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(234, 88, 12, 0.1);
    border: 1px solid rgba(234, 88, 12, 0.2);
    border-radius: 8px;
    margin-bottom: 24px;
    font-size: 14px;
    color: #A8A29E;
  }

  .lead-magnet-preview svg {
    color: #EA580C;
  }

  .lm-text strong {
    color: #EA580C;
  }

  .newsletter-form {
    max-width: 440px;
    margin: 0 auto;
  }

  .form-row {
    display: flex;
    gap: 12px;
  }

  @media (max-width: 500px) {
    .newsletter-full {
      padding: 40px 24px;
    }

    .form-row {
      flex-direction: column;
    }
  }

  .newsletter-input {
    flex: 1;
    padding: 14px 18px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    color: #FAFAF9;
    font-size: 15px;
    transition: all 0.2s ease;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: rgba(234, 88, 12, 0.5);
    background: rgba(255, 255, 255, 0.08);
  }

  .newsletter-input::placeholder {
    color: #78716C;
  }

  .newsletter-button {
    padding: 14px 28px;
    background: #EA580C;
    color: #fff;
    border: none;
    border-radius: 10px;
    font-weight: 600;
    font-size: 15px;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 140px;
  }

  .newsletter-button:hover:not(:disabled) {
    background: #C2410C;
    transform: translateY(-1px);
  }

  .newsletter-button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .spinner {
    width: 20px;
    height: 20px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .newsletter-privacy {
    font-size: 12px;
    color: #78716C;
    margin-top: 14px;
    text-align: center;
  }

  .newsletter-success {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 20px;
    background: rgba(74, 222, 128, 0.1);
    border: 1px solid rgba(74, 222, 128, 0.2);
    border-radius: 10px;
  }

  .newsletter-success svg {
    color: #4ADE80;
    flex-shrink: 0;
  }

  .success-text {
    color: #4ADE80;
    font-weight: 600;
    font-size: 15px;
  }

  .newsletter-features {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-top: 40px;
    padding-top: 32px;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  @media (max-width: 600px) {
    .newsletter-features {
      flex-direction: column;
      gap: 16px;
      align-items: center;
    }
  }

  .nf-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: #A8A29E;
  }

  .nf-item svg {
    color: #78716C;
  }
</style>
