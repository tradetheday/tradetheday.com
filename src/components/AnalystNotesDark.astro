---
export interface Props {
  title: string;
  icon?: string;
  id: string;
  expanded?: boolean;
}

const { 
  title, 
  icon = 'ðŸ“Š', 
  id,
  expanded = false
} = Astro.props;

const uniqueId = `analyst-${id}`;
const iconId = `icon-${id}`;
---

<div class="analyst-notes-dark">
  <button 
    class="analyst-notes-button-dark" 
    data-target={uniqueId}
    data-icon={iconId}
    aria-expanded={expanded ? 'true' : 'false'}
  >
    {icon} {title}
    <span id={iconId} class="analyst-notes-icon-dark">{expanded ? 'â–²' : 'â–¼'}</span>
  </button>
  <div 
    id={uniqueId} 
    class="analyst-notes-content-dark" 
    style={expanded ? 'display: block;' : 'display: none;'}
  >
    <slot />
  </div>
</div>

<script>
// Analyst Notes Dark functionality
document.addEventListener('DOMContentLoaded', function() {
  const buttons = document.querySelectorAll('.analyst-notes-button-dark');
  
  buttons.forEach(button => {
    button.addEventListener('click', function() {
      const targetId = this.getAttribute('data-target');
      const iconId = this.getAttribute('data-icon');
      const content = document.getElementById(targetId);
      const icon = document.getElementById(iconId);
      
      if (content && icon) {
        const isVisible = content.style.display === 'block';
        
        if (isVisible) {
          content.style.display = 'none';
          icon.textContent = 'â–¼';
          this.setAttribute('aria-expanded', 'false');
        } else {
          content.style.display = 'block';
          icon.textContent = 'â–²';
          this.setAttribute('aria-expanded', 'true');
        }
      }
    });
  });
});
</script>

<style>
.analyst-notes-dark {
  margin: 2rem 0;
  border-radius: 1rem;
  overflow: hidden;
}

.analyst-notes-button-dark {
  min-width: 500px;
  padding: 1rem 2rem;
  background: linear-gradient(135deg, #ff4800 0%, #e63e00 100%);
  color: white;
  border: none;
  border-radius: 0.75rem;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
  position: relative;
  margin: 0 auto 1rem auto;
  white-space: nowrap;
}

.analyst-notes-button-dark:hover {
  background: linear-gradient(135deg, #e63e00 0%, #cc3700 100%);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(255, 72, 0, 0.3);
}

.analyst-notes-button-dark:active {
  transform: translateY(0);
}

.analyst-notes-icon-dark {
  font-size: 1.2rem;
  font-weight: bold;
  transition: transform 0.3s ease;
  margin-left: 1rem;
}

.analyst-notes-button-dark[aria-expanded="true"] .analyst-notes-icon-dark {
  transform: rotate(180deg);
}

.analyst-notes-content-dark {
  padding: 2rem;
  background: #fff9f0;
  animation: fadeIn 0.3s ease;
  border: 1px solid rgba(255, 72, 0, 0.2);
  border-radius: 1rem;
  box-shadow: 0 4px 20px rgba(255, 72, 0, 0.08);
}

.analyst-notes-content-dark h3,
.analyst-notes-content-dark h4,
.analyst-notes-content-dark h5 {
  color: var(--charcoal, #1e2427);
  margin: 1.5rem 0 1rem 0;
}

.analyst-notes-content-dark h3:first-child,
.analyst-notes-content-dark h4:first-child,
.analyst-notes-content-dark h5:first-child {
  margin-top: 0;
}

.analyst-notes-content-dark p {
  margin-bottom: 1rem;
  line-height: 1.6;
  color: var(--gray-700, #374151);
}

.analyst-notes-content-dark p:last-child {
  margin-bottom: 0;
}

.analyst-notes-content-dark ul,
.analyst-notes-content-dark ol {
  margin: 1rem 0;
  padding-left: 1.5rem;
}

.analyst-notes-content-dark li {
  margin-bottom: 0.5rem;
  line-height: 1.6;
  color: var(--gray-700, #374151);
}

.analyst-notes-content-dark strong {
  color: var(--charcoal, #1e2427);
  font-weight: 600;
}

.analyst-notes-content-dark .grid-2 {
  color: var(--gray-700, #374151);
}

.analyst-notes-content-dark .grid-2 h5 {
  color: var(--charcoal, #1e2427);
}

.analyst-notes-content-dark .grid-2 ul {
  color: var(--gray-700, #374151);
}

.analyst-notes-content-dark .grid-2 li {
  color: var(--gray-700, #374151);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Mobile responsive */
@media (max-width: 768px) {
  .analyst-notes-button-dark {
    min-width: 90%;
    max-width: 90%;
    padding: 1rem 1.5rem;
    font-size: 0.9rem;
    white-space: normal;
    text-align: left;
  }
  
  .analyst-notes-content-dark {
    padding: 1.5rem;
  }
  
  .analyst-notes-icon-dark {
    margin-left: 0.5rem;
  }
}

@media (max-width: 480px) {
  .analyst-notes-button-dark {
    font-size: 0.8125rem;
    padding: 0.875rem 1.25rem;
  }
}
</style>